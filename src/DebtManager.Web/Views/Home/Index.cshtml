@{
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="relative bg-gradient-to-br from-blue-600 via-blue-700 to-indigo-800 text-white">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-20"></div>
    
    <div class="relative container mx-auto px-4 py-24 min-h-[80vh] flex items-center">
        <div class="max-w-7xl mx-auto w-full">
            <div class="grid md:grid-cols-2 gap-12 items-center">
                <div class="space-y-6">
                    <h1 class="text-5xl md:text-6xl font-bold leading-tight">
                        Take Control of Your Debt
                    </h1>
                    <p class="text-xl md:text-2xl text-blue-100">
                        Professional debt management solutions that work for you. Make payments easily using your reference number.
                    </p>
                    <div class="flex flex-wrap gap-4 text-blue-100">
                        <div class="flex items-center gap-2">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Flexible payment plans</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Secure & confidential</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>24/7 online access</span>
                        </div>
                    </div>
                </div>
                
                <div class="bg-white rounded-2xl shadow-2xl p-8 md:p-10 text-gray-800">
                    <h2 class="text-3xl font-bold mb-6 text-gray-900">Make a Payment</h2>
                    <p class="text-gray-600 mb-6">Enter your payment reference number to continue</p>
                    
                    <form method="post" action="#" class="space-y-6">
                        <div>
                            <label for="reference" class="block text-sm font-semibold text-gray-700 mb-2">
                                Payment Reference
                            </label>
                            <input 
                                type="text" 
                                id="reference" 
                                name="reference" 
                                placeholder="Enter your reference number"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition"
                                required
                            />
                            <p class="mt-2 text-sm text-gray-500">
                                You can find this on your payment plan documents
                            </p>
                        </div>
                        
                        <button 
                            type="submit"
                            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-4 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl"
                        >
                            Continue to Payment
                        </button>
                    </form>
                    
                    <div class="mt-8 pt-6 border-t border-gray-200">
                        <p class="text-sm text-gray-600 text-center">
                            Don't have a reference number? 
                            <a href="/Account/SignInUser" class="text-blue-600 hover:text-blue-700 font-semibold">
                                Sign in to your account
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="py-16 bg-white">
    <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
            <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-gray-900">
                How It Works
            </h2>
            <div class="grid md:grid-cols-3 gap-8">
                <div class="text-center">
                    <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">1. Enter Your Reference</h3>
                    <p class="text-gray-600">Use your unique payment reference number to access your account</p>
                </div>
                <div class="text-center">
                    <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">2. Choose Payment Method</h3>
                    <p class="text-gray-600">Select from multiple secure payment options that work for you</p>
                </div>
                <div class="text-center">
                    <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">3. Complete Payment</h3>
                    <p class="text-gray-600">Receive instant confirmation and track your progress online</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
            <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900">
                For Business Clients
            </h2>
            <p class="text-xl text-gray-600 mb-8">
                Streamline your debt collection and payment processing with our comprehensive business solutions.
            </p>
            <a 
                href="/Account/SignInClient" 
                class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-4 px-8 rounded-lg transition duration-200 shadow-lg hover:shadow-xl"
            >
                Access Business Portal
            </a>
        </div>
    </div>
</section>
