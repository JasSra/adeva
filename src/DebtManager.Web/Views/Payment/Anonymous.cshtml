@{
    var reference = ViewBag.Reference as string;
    var themeName = ViewBag.ThemeName as string ?? "Default";
    var theme = Context.Items[DebtManager.Web.Services.BrandingResolverMiddleware.ThemeItemKey] as DebtManager.Web.Services.BrandingTheme;
    var primaryColor = theme?.PrimaryColorHex ?? "#0ea5e9";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Make a Payment - @themeName</title>
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        .brand-primary-bg { background-color: @primaryColor; }
        .brand-primary-text { color: @primaryColor; }
        .brand-primary-border { border-color: @primaryColor; }
    </style>
</head>
<body class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="brand-primary-bg text-white py-6">
        <div class="container mx-auto px-4">
            <h1 class="text-2xl font-bold">@themeName</h1>
            <p class="text-sm text-white text-opacity-80">Secure Payment Portal</p>
        </div>
    </header>

    <div class="container mx-auto px-4 py-8">
        <div class="max-w-2xl mx-auto">
            <div class="bg-white rounded-lg shadow">
                <div class="p-6 border-b">
                    <h3 class="text-lg font-semibold">Make a Payment</h3>
                    <p class="text-sm text-gray-500 mt-1">Pay your debt securely without logging in</p>
                </div>
                
                <div class="p-6">
                    @if (string.IsNullOrEmpty(reference))
                    {
                        <!-- Step 1: Enter Debt Reference -->
                        <form action="/Payment/Anonymous" method="get" class="space-y-6">
                            <div class="bg-blue-50 border-l-4 border-blue-400 p-4 rounded mb-6">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <svg class="h-5 w-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </div>
                                    <div class="ml-3">
                                        <p class="text-sm text-blue-700">
                                            Enter your debt reference number to proceed. You'll need to verify your identity before making a payment.
                                        </p>
                                    </div>
                                </div>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Debt Reference Number *</label>
                                <input type="text" name="reference" placeholder="e.g., D-5001" class="w-full border border-gray-300 rounded-lg px-4 py-2 text-lg" required />
                                <p class="text-xs text-gray-500 mt-1">This was provided in your notification letter or email</p>
                            </div>
                            
                            <button type="submit" class="w-full px-6 py-3 brand-primary-bg text-white rounded-lg hover:opacity-90 transition font-medium">
                                Continue
                            </button>
                        </form>
                    }
                    else
                    {
                        <!-- Step 2: Verify Identity -->
                        <form action="/Payment/VerifyOtp" method="get" class="space-y-6">
                            <input type="hidden" name="reference" value="@reference" />
                            
                            <div class="bg-gray-50 rounded-lg p-4 mb-6">
                                <h4 class="font-semibold text-gray-900 mb-2">Debt Information</h4>
                                <div class="grid grid-cols-2 gap-4 text-sm">
                                    <div>
                                        <p class="text-gray-500">Reference</p>
                                        <p class="font-medium">#@reference</p>
                                    </div>
                                    <div>
                                        <p class="text-gray-500">Outstanding Balance</p>
                                        <p class="font-medium text-red-600">$3,250.00</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded mb-6">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                        </svg>
                                    </div>
                                    <div class="ml-3">
                                        <p class="text-sm text-yellow-700">
                                            <strong>Identity Verification Required:</strong> We'll send a one-time code to verify your identity before processing your payment.
                                        </p>
                                    </div>
                                </div>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Select Verification Method *</label>
                                <div class="space-y-2">
                                    <label class="flex items-center p-4 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50">
                                        <input type="radio" name="contact" value="email" checked class="mr-3" />
                                        <div class="flex items-center flex-1">
                                            <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                            </svg>
                                            <span class="font-medium">Email</span>
                                            <span class="ml-auto text-sm text-gray-500">j***@@example.com</span>
                                        </div>
                                    </label>
                                    <label class="flex items-center p-4 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50">
                                        <input type="radio" name="contact" value="sms" class="mr-3" />
                                        <div class="flex items-center flex-1">
                                            <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                                            </svg>
                                            <span class="font-medium">SMS</span>
                                            <span class="ml-auto text-sm text-gray-500">***-***-4567</span>
                                        </div>
                                    </label>
                                </div>
                            </div>
                            
                            <div class="flex gap-3">
                                <button type="submit" class="flex-1 px-6 py-3 brand-primary-bg text-white rounded-lg hover:opacity-90 transition font-medium">
                                    Send Verification Code
                                </button>
                                <a href="/Payment/Anonymous" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition font-medium">
                                    Back
                                </a>
                            </div>
                        </form>
                    }
                    
                    <div class="mt-8 pt-6 border-t">
                        <div class="flex items-center justify-center gap-2 text-sm text-gray-500">
                            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                            </svg>
                            <span>Secure encrypted payment</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="mt-6 text-center text-sm text-gray-500">
                <p>Need help? Contact support at <a href="mailto:support@@example.com" class="text-blue-600 hover:underline">support@@example.com</a></p>
                <p class="mt-2">Already have an account? <a href="/Account/SignInUser" class="text-blue-600 hover:underline">Sign in</a></p>
            </div>
        </div>
    </div>

    <footer class="bg-gray-800 text-white py-6 mt-12">
        <div class="container mx-auto px-4 text-center">
            <p class="text-sm">&copy; 2024 @themeName. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
