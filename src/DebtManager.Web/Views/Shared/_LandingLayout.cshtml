@inject Microsoft.Extensions.Hosting.IHostEnvironment Env
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Adeva Plus</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body class="min-h-screen bg-gray-50">
    <header class="bg-white shadow-sm">
        <div class="container mx-auto px-4 py-4">
            <nav class="flex items-center justify-between">
                <div class="flex items-center">
                    <a href="/" class="text-2xl font-bold text-blue-600">Adeva Plus</a>
                </div>
                <div class="flex items-center gap-6">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <a href="/User" class="text-gray-700 hover:text-blue-600">My Debts</a>
                        <a href="/Client" class="text-gray-700 hover:text-blue-600">Client Portal</a>
                        <a href="/Admin" class="text-gray-700 hover:text-blue-600">Admin</a>
                        <span class="text-gray-600">@User.Identity!.Name</span>
                        <a href="/Account/SignOutUser" class="text-gray-700 hover:text-blue-600">Sign out</a>
                    }
                    else
                    {
                        <a href="/Account/SignInClient" class="text-gray-700 hover:text-blue-600">For Business</a>
                        <a href="/Account/SignInUser" class="text-gray-700 hover:text-blue-600">My Account</a>
                    }

                    @* Dev-only superuser links *@
                    @if (Env.IsDevelopment())
                    {
                        <span class="text-xs uppercase text-gray-400">Dev</span>
                        if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <a href="/Dev/Impersonate" class="text-gray-700 hover:text-blue-600">Impersonate</a>
                            <a href="/Dev/Danger" class="text-red-600 hover:text-red-700">Danger</a>
                        }
                        else
                        {
                            <a href="/Dev/Login" class="text-gray-700 hover:text-blue-600">Dev Login</a>
                        }
                    }
                </div>
            </nav>
        </div>
    </header>
    
    <main>
        @RenderBody()
    </main>

    <footer class="bg-gray-800 text-white mt-16">
        <div class="container mx-auto px-4 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <h3 class="font-bold text-lg mb-4">Adeva Plus</h3>
                    <p class="text-gray-400">Professional debt management solutions for businesses and individuals.</p>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">Quick Links</h4>
                    <ul class="space-y-2 text-gray-400">
                        <li><a href="/Article/View/about-us" class="hover:text-white">About Us</a></li>
                        <li><a href="/Article/View/how-it-works" class="hover:text-white">How It Works</a></li>
                        <li><a href="/Article/View/faq" class="hover:text-white">FAQ</a></li>
                        <li><a href="/Article/View/privacy-policy" class="hover:text-white">Privacy Policy</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">Contact</h4>
                    <ul class="space-y-2 text-gray-400">
