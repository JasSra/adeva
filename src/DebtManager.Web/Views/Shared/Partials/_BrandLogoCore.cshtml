@model DebtManager.Web.Models.BrandLogoModel
@{
    var variant = (Model?.Variant ?? "full").ToLowerInvariant();
    var size = (Model?.Size ?? "md").ToLowerInvariant();
    string sizeClass = size switch { "xs"=>"h-6", "sm"=>"h-8", "lg"=>"h-12", "xl"=>"h-16", _=>"h-10"};
}
@if (variant == "circle")
{
    <span class="inline-flex items-center">
        <span class="brand-circle @sizeClass w-auto"></span>
        <span class="sr-only">@Model?.Title</span>
    </span>
}
else if (variant == "mark")
{
    <span class="inline-flex items-center">
        <svg class="@sizeClass w-auto" viewBox="0 0 120 40" role="img" aria-label="@Model?.Title">
            <rect x="0" y="2" width="36" height="36" rx="10" fill="#0078D4" />
            <text x="9" y="27" font-family="'Segoe UI','Inter','Helvetica Neue',Arial,sans-serif" font-weight="800" font-size="18" fill="#fff">A+</text>
        </svg>
    </span>
}
else
{
    <span class="inline-flex items-center">
        <svg class="@sizeClass w-auto" viewBox="0 0 240 48" role="img" aria-label="@Model?.Title">
            <defs>
                <style>
                    .word { font-family: 'Segoe UI','Inter','Helvetica Neue',Arial,sans-serif; }
                </style>
            </defs>
            <g transform="translate(0,2)">
                <rect x="0" y="0" width="44" height="44" rx="12" fill="#0078D4"/>
                <text x="12" y="29" class="word" font-weight="800" font-size="18" fill="#fff">A+</text>
            </g>
            <g transform="translate(58,6)" fill="#0b1b3a">
                <text x="0" y="28" class="word" font-weight="700" font-size="26">Adeva</text>
                <text x="96" y="28" class="word" font-weight="600" font-size="26" fill="#0078D4">Plus</text>
            </g>
        </svg>
    </span>
}
