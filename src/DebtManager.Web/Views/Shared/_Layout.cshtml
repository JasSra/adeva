@{
    var themeName = ViewBag.ThemeName as string ?? "Default";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Debt Manager - @themeName</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body class="min-h-screen bg-gray-50">
    <header class="p-4 border-b bg-white">
        <div class="container mx-auto">
            <h1 class="text-xl font-bold">Debt Manager â€” @themeName</h1>
            <nav class="mt-2 flex gap-4 text-blue-600">
                <a href="/" class="hover:underline">Home</a>
                <a href="/User" class="hover:underline">User</a>
                <a href="/Client" class="hover:underline">Client</a>
                <a href="/Admin" class="hover:underline">Admin</a>
                <a href="/Admin/Onboarding" class="hover:underline">Onboarding</a>
                <span class="ml-auto"></span>
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <span class="text-gray-600">@User.Identity!.Name</span>
                    <a href="/Account/SignOutUser" class="hover:underline">Sign out</a>
                }
                else
                {
                    <a href="/Account/SignIn" class="hover:underline">Sign in</a>
                }
            </nav>
        </div>
    </header>
    <main class="container mx-auto p-4">
        @RenderBody()
    </main>
</body>
</html>
