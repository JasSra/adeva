@using Microsoft.Extensions.Hosting
@inject Microsoft.Extensions.Hosting.IHostEnvironment Env
@{
    var themeName = ViewBag.ThemeName as string ?? "Default";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Adeva Plus - @themeName</title>
    <link rel="stylesheet" href="/css/site.css" />
    <script>
        // Dark mode toggle
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark')
        } else {
            document.documentElement.classList.remove('dark')
        }

        function toggleDarkMode() {
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark');
                localStorage.theme = 'light';
            } else {
                document.documentElement.classList.add('dark');
                localStorage.theme = 'dark';
            }
        }

        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }
    </script>
</head>
<body class="min-h-screen bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <header class="p-4 border-b bg-white dark:bg-gray-800 dark:border-gray-700">
        <div class="container mx-auto">
            <div class="flex items-center justify-between">
                <h1 class="text-xl font-bold dark:text-white">Adeva Plus â€” @themeName</h1>
                <div class="flex items-center gap-4">
                    <button onclick="toggleDarkMode()" class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700" title="Toggle dark mode">
                        <svg class="w-5 h-5 dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                        </svg>
                        <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                        </svg>
                    </button>
                    <button onclick="toggleMobileMenu()" class="md:hidden p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>
            </div>
            <nav id="mobile-menu" class="mt-2 hidden md:flex md:flex-wrap gap-4 text-blue-600 dark:text-blue-400">
                <a href="/" class="hover:underline py-1">Home</a>
                <a href="/User" class="hover:underline py-1">User</a>
                <a href="/Client" class="hover:underline py-1">Client</a>
                <a href="/Admin" class="hover:underline py-1">Admin</a>
                <a href="/Admin/Onboarding" class="hover:underline py-1">Onboarding</a>
                @if (Env.IsDevelopment())
                {
                    <span class="hidden md:block md:flex-1"></span>
                    <span class="text-xs uppercase text-gray-500 dark:text-gray-400 self-center">Dev</span>
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <a href="/Dev/Impersonate" class="hover:underline py-1">Impersonate</a>
                        <a href="/Dev/Danger" class="hover:underline py-1 text-red-600">Danger</a>
                    }
                    else
                    {
                        <a href="/Dev/Login" class="hover:underline py-1">Dev Login</a>
                    }
                }
                else
                {
                    <span class="hidden md:block md:flex-1"></span>
                }
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <span class="text-gray-600 dark:text-gray-400 py-1">@User.Identity!.Name</span>
                    <a href="/Account/SignOutUser" class="hover:underline py-1">Sign out</a>
                }
                else
                {
                    <a href="/Account/SignIn" class="hover:underline py-1">Sign in</a>
                }
            </nav>
        </div>
    </header>
    <main class="container mx-auto p-4 md:p-6">
        @RenderBody()
    </main>
</body>
</html>