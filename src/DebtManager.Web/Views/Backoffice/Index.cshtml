@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isInitialSignupAllowed = ViewBag.IsInitialAdminSignupAllowed as bool? ?? false;
}

<div class="max-w-3xl mx-auto space-y-6">
    <div class="app-page-header text-center md:text-left">
        <div>
            <h1 class="app-page-title text-center md:text-left">System Backoffice</h1>
            <p class="app-page-subtitle text-center md:text-left">Provisioning shortcuts, environment checks, and recovery tools for operators.</p>
        </div>
    </div>

    <div class="app-surface">
        <div class="app-surface-body space-y-6">
            @if (isInitialSignupAllowed)
            {
                <div class="app-help-banner">
                    <div>
                        <h3 class="text-lg font-semibold">Initial Admin Setup Required</h3>
                        <p class="text-sm">No administrator accounts exist yet. Create the first admin account to unlock secure configuration.</p>
                    </div>
                    <div class="app-help-banner-actions">
                        <a href="/Account/SignInAdmin?returnUrl=/Admin" class="btn inline-flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16h2m-1-10v10m9 4H4a2 2 0 01-2-2V6a2 2 0 012-2h7l2 2h7a2 2 0 012 2v10a2 2 0 01-2 2z" />
                            </svg>
                            Sign in as Initial Administrator
                        </a>
                    </div>
                </div>

                <div class="app-surface-muted p-5 rounded-xl text-sm text-slate-600 dark:text-slate-300 space-y-3">
                    <h4 class="font-semibold text-slate-700 dark:text-slate-200">What happens next?</h4>
                    <ol class="list-decimal list-inside space-y-1">
                        <li>Click the link above to sign in with Azure AD B2C.</li>
                        <li>Your account is registered as the first administrator.</li>
                        <li>You'll be redirected to the Admin Dashboard.</li>
                        <li>Assign additional admin roles from <span class="font-semibold">User Accounts</span>.</li>
                        <li>The signup link disappears once an admin exists.</li>
                    </ol>
                </div>
            }
            else
            {
                <div class="tw-alert-warning rounded-xl shadow-sm flex items-start gap-3">
                    <svg class="w-6 h-6 text-amber-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M5.07 19h13.86c1.54 0 2.5-1.67 1.73-3L13.73 5c-.77-1.33-2.69-1.33-3.46 0L3.34 16c-.77 1.33.19 3 1.73 3z" />
                    </svg>
                    <div class="space-y-2">
                        <div>
                            <h3 class="text-base font-semibold text-amber-900 dark:text-amber-100">Admin Signup Restricted</h3>
                            <p class="text-sm text-amber-800 dark:text-amber-200">@ViewBag.Message</p>
                        </div>
                        <p class="text-sm text-amber-700 dark:text-amber-100">
                            Need elevated access? Ask an existing administrator to grant the role to your account.
                        </p>
                    </div>
                </div>

                <div class="flex justify-center">
                    <a href="/" class="btn-outline inline-flex items-center gap-2">
                        <span aria-hidden="true">‚Üê</span>
                        Return to Home
                    </a>
                </div>
            }

            <div class="space-y-4 pt-2">
                <h3 class="text-lg font-semibold">System Links</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                    <a href="/health/live" class="app-link-tile text-sm">
                        <span class="font-medium">Health Check</span>
                        <span class="text-xs text-slate-500 dark:text-slate-300">System status</span>
                    </a>
                    <a href="/hangfire" class="app-link-tile text-sm">
                        <span class="font-medium">Hangfire</span>
                        <span class="text-xs text-slate-500 dark:text-slate-300">Background jobs</span>
                    </a>
                    @if (!isInitialSignupAllowed)
                    {
                        <a href="/Admin" class="app-link-tile text-sm">
                            <span class="font-medium">Admin Portal</span>
                            <span class="text-xs text-slate-500 dark:text-slate-300">Administration</span>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
