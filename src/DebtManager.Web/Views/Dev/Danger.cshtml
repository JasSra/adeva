@{
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
    ViewData["Title"] = "Danger Zone";
}

<div class="max-w-xl mx-auto bg-white rounded shadow p-6 mt-10">
    <h2 class="text-xl font-semibold mb-4 text-red-700">Danger Zone</h2>
    <p class="text-sm text-gray-700 mb-6">Development-only destructive actions. These actions will drop and recreate the database, run migrations, and reseed minimum data.</p>
    @if (TempData["Message"] is string msg)
    {
        <div class="p-3 mb-4 bg-green-100 text-green-800 rounded">@msg</div>
    }
    <form method="post" action="/Dev/ResetDatabase">
        @Html.AntiForgeryToken()
        <button class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded" onclick="return confirm('This will DROP and recreate the database. Continue?');">Drop DB + Migrate + Seed</button>
    </form>

    <div class="mt-6">
        <a href="/Dev/Impersonate" class="text-blue-600 hover:underline">Back</a>
    </div>
</div>
