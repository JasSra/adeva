@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Super Admin - @ViewBag.Title</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body class="min-h-screen bg-gray-50">
    <div class="flex h-screen">
        <aside class="w-64 bg-gray-900 text-white flex flex-col">
            <div class="p-4 border-b border-gray-800">
                <h1 class="text-xl font-bold">Super Admin</h1>
                <p class="text-xs opacity-70">Root Controls</p>
            </div>
            <nav class="flex-1 overflow-y-auto p-3 space-y-1">
                <a href="/Root" class="block px-3 py-2 rounded hover:bg-gray-800 @(ViewContext.RouteData.Values["controller"]?.ToString()=="Home"?"bg-gray-800":"")">Dashboard</a>
                <a href="/Root/Accounts" class="block px-3 py-2 rounded hover:bg-gray-800 @(ViewContext.RouteData.Values["controller"]?.ToString()=="Accounts"?"bg-gray-800":"")">Accounts</a>
                <a href="/Root/System/Activities" class="block px-3 py-2 rounded hover:bg-gray-800 @(ViewContext.RouteData.Values["controller"]?.ToString()=="System"?"bg-gray-800":"")">System Activities</a>
            </nav>
            <div class="p-4 border-t border-gray-800">
                <a href="/Admin" class="text-sm text-gray-300 hover:text-white">Go to Admin</a>
            </div>
        </aside>
        <div class="flex-1 flex flex-col">
            <header class="bg-white border-b px-6 py-4">
                <div class="flex items-center justify-between">
                    <h2 class="text-lg font-semibold">@ViewBag.Title</h2>
                    <div class="flex items-center gap-3 text-sm">
                        <a href="/health/live" class="text-gray-600 hover:text-gray-900">Health</a>
                        <a href="/" class="text-gray-600 hover:text-gray-900">Public Site</a>
                    </div>
                </div>
            </header>
            <main class="flex-1 overflow-y-auto p-6">
                @RenderBody()
            </main>
        </div>
    </div>
</body>
</html>
