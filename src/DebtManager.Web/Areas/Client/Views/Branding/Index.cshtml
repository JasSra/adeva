@{
    Layout = "~/Areas/Client/Views/Shared/_ClientLayout.cshtml";
    var theme = Context.Items[DebtManager.Web.Services.BrandingResolverMiddleware.ThemeItemKey] as DebtManager.Web.Services.BrandingTheme;
    var primaryColor = theme?.PrimaryColorHex ?? "#0ea5e9";
}

<div class="bg-white rounded-lg shadow">
    <div class="p-6 border-b">
        <h3 class="text-lg font-semibold">Branding Settings</h3>
        <p class="text-sm text-gray-500 mt-1">Customize your organization's appearance across the platform</p>
    </div>
    
    <div class="p-6">
        <div class="space-y-8">
            <!-- Colors -->
            <div>
                <h4 class="text-sm font-semibold text-gray-700 mb-4">Brand Colors</h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Primary Color</label>
                        <div class="flex items-center gap-4">
                            <input type="color" value="@primaryColor" class="h-10 w-20 border rounded cursor-pointer" />
                            <input type="text" value="@primaryColor" class="flex-1 border rounded px-3 py-2 text-sm" />
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Secondary Color</label>
                        <div class="flex items-center gap-4">
                            <input type="color" value="#64748b" class="h-10 w-20 border rounded cursor-pointer" />
                            <input type="text" value="#64748b" class="flex-1 border rounded px-3 py-2 text-sm" />
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Logos -->
            <div>
                <h4 class="text-sm font-semibold text-gray-700 mb-4">Logos & Images</h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Logo</label>
                        <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center">
                            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            <div class="mt-2">
                                <button type="button" class="text-sm text-blue-600 hover:text-blue-700">Upload Logo</button>
                            </div>
                            <p class="text-xs text-gray-500 mt-1">PNG, JPG up to 2MB</p>
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Favicon</label>
                        <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center">
                            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            <div class="mt-2">
                                <button type="button" class="text-sm text-blue-600 hover:text-blue-700">Upload Favicon</button>
                            </div>
                            <p class="text-xs text-gray-500 mt-1">ICO, PNG 32x32</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Tagline & Footer -->
            <div>
                <h4 class="text-sm font-semibold text-gray-700 mb-4">Text & Messages</h4>
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Brand Tagline</label>
                        <input type="text" placeholder="Your trusted debt recovery partner" class="w-full border rounded px-3 py-2 text-sm" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Statement Footer</label>
                        <textarea rows="3" placeholder="Text to appear at the bottom of statements and receipts" class="w-full border rounded px-3 py-2 text-sm"></textarea>
                    </div>
                </div>
            </div>
            
            <!-- Preview -->
            <div>
                <h4 class="text-sm font-semibold text-gray-700 mb-4">Preview</h4>
                <div class="border rounded-lg p-6" style="background-color: @primaryColor">
                    <div class="bg-white rounded-lg p-4 shadow-sm">
                        <h5 class="font-semibold" style="color: @primaryColor">Sample Header</h5>
                        <p class="text-sm text-gray-600 mt-2">This is how your primary color will appear in the interface.</p>
                        <button class="mt-3 px-4 py-2 text-white rounded text-sm" style="background-color: @primaryColor">Sample Button</button>
                    </div>
                </div>
            </div>
            
            <div class="flex gap-2 pt-4 border-t">
                <button class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Save Changes</button>
                <button class="px-6 py-2 border rounded hover:bg-gray-50">Reset to Default</button>
            </div>
        </div>
    </div>
</div>
