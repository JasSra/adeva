@model DebtManager.Domain.Documents.InvoiceData
@{
    ViewData["Title"] = "Invoice Processing Details";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Invoice Processing Details</h1>

    <div class="bg-white rounded-lg shadow p-6 mb-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h3 class="text-sm font-medium text-gray-500 mb-1">Status</h3>
                @switch (Model.Status)
                {
                    case DebtManager.Domain.Documents.InvoiceProcessingStatus.Pending:
                        <span class="px-3 py-1 text-sm rounded bg-yellow-100 text-yellow-800">Pending</span>
                        break;
                    case DebtManager.Domain.Documents.InvoiceProcessingStatus.Processing:
                        <span class="px-3 py-1 text-sm rounded bg-blue-100 text-blue-800">Processing</span>
                        break;
                    case DebtManager.Domain.Documents.InvoiceProcessingStatus.Completed:
                        <span class="px-3 py-1 text-sm rounded bg-green-100 text-green-800">Completed</span>
                        break;
                    case DebtManager.Domain.Documents.InvoiceProcessingStatus.Failed:
                        <span class="px-3 py-1 text-sm rounded bg-red-100 text-red-800">Failed</span>
                        break;
                    case DebtManager.Domain.Documents.InvoiceProcessingStatus.ManualReviewRequired:
                        <span class="px-3 py-1 text-sm rounded bg-orange-100 text-orange-800">Review Required</span>
                        break;
                }
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500 mb-1">Confidence Score</h3>
                <p class="text-lg">@(Model.ConfidenceScore?.ToString("P") ?? "N/A")</p>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500 mb-1">Retry Count</h3>
                <p class="text-lg">@Model.RetryCount</p>
            </div>
            <div>
                <h3 class="text-sm font-medium text-gray-500 mb-1">Processed At</h3>
                <p class="text-lg">@(Model.ProcessedAtUtc?.ToString("yyyy-MM-dd HH:mm") ?? "Not processed")</p>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mt-4 p-4 bg-red-50 border border-red-200 rounded">
                <h3 class="text-sm font-medium text-red-800 mb-1">Error Message</h3>
                <p class="text-sm text-red-700">@Model.ErrorMessage</p>
            </div>
        }
    </div>

    @if (Model.Status == DebtManager.Domain.Documents.InvoiceProcessingStatus.Completed)
    {
        <div class="bg-white rounded-lg shadow p-6 mb-6">
            <h2 class="text-xl font-semibold mb-4">Extracted Data</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <h3 class="text-sm font-medium text-gray-500 mb-1">Invoice Number</h3>
                    <p>@(Model.InvoiceNumber ?? "N/A")</p>
                </div>
                <div>
                    <h3 class="text-sm font-medium text-gray-500 mb-1">Total Amount</h3>
                    <p>@(Model.TotalAmount?.ToString("C") ?? "N/A") @Model.Currency</p>
                </div>
                <div>
                    <h3 class="text-sm font-medium text-gray-500 mb-1">Invoice Date</h3>
                    <p>@(Model.InvoiceDate?.ToString("yyyy-MM-dd") ?? "N/A")</p>
                </div>
                <div>
                    <h3 class="text-sm font-medium text-gray-500 mb-1">Due Date</h3>
                    <p>@(Model.DueDate?.ToString("yyyy-MM-dd") ?? "N/A")</p>
                </div>
                <div>
                    <h3 class="text-sm font-medium text-gray-500 mb-1">Vendor Name</h3>
                    <p>@(Model.VendorName ?? "N/A")</p>
                </div>
                <div>
                    <h3 class="text-sm font-medium text-gray-500 mb-1">Vendor ABN</h3>
                    <p>@(Model.VendorAbn ?? "N/A")</p>
                </div>
                <div>
                    <h3 class="text-sm font-medium text-gray-500 mb-1">Customer Name</h3>
                    <p>@(Model.CustomerName ?? "N/A")</p>
                </div>
            </div>
        </div>
    }

    <div class="flex gap-4">
        <a href="@Url.Action("Index")" class="text-blue-600 hover:underline">‚Üê Back to Queue</a>
        @if (Model.Status == DebtManager.Domain.Documents.InvoiceProcessingStatus.Failed || 
             Model.Status == DebtManager.Domain.Documents.InvoiceProcessingStatus.ManualReviewRequired)
        {
            <form method="post" action="@Url.Action("Retry", new { id = Model.Id })" class="inline">
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                    Retry Processing
                </button>
            </form>
        }
    </div>
</div>
