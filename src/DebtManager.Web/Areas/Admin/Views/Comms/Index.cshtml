@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-6">
    <ul class="flex border-b">
        <li class="mr-1">
            <a href="/Admin/Comms" class="inline-block py-2 px-4 bg-white border-b-2 border-blue-600 text-blue-600 font-semibold">Overview</a>
        </li>
        <li class="mr-1">
            <a href="/Admin/Comms/Templates" class="inline-block py-2 px-4 text-gray-600 hover:text-blue-600">Templates</a>
        </li>
        <li class="mr-1">
            <a href="/Admin/Messages/AllMessages" class="inline-block py-2 px-4 text-gray-600 hover:text-blue-600">All Messages</a>
        </li>
    </ul>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold mb-4">Email Templates</h3>
        <p class="text-3xl font-bold text-blue-600 mb-2">12</p>
        <p class="text-sm text-gray-600">Active templates</p>
        <a href="/Admin/Comms/Templates?type=email" class="mt-4 inline-block text-blue-600 hover:underline">Manage →</a>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold mb-4">SMS Templates</h3>
        <p class="text-3xl font-bold text-green-600 mb-2">8</p>
        <p class="text-sm text-gray-600">Active templates</p>
        <a href="/Admin/Comms/Templates?type=sms" class="mt-4 inline-block text-blue-600 hover:underline">Manage →</a>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold mb-4">Messages Sent</h3>
        <p class="text-3xl font-bold text-purple-600 mb-2">1,234</p>
        <p class="text-sm text-gray-600">This month</p>
        <a href="/Admin/Messages/AllMessages" class="mt-4 inline-block text-blue-600 hover:underline">View All →</a>
    </div>
</div>

<div class="mt-6 bg-white rounded-lg shadow">
    <div class="p-6 border-b flex items-center justify-between">
        <h3 class="text-lg font-semibold">Quick Actions</h3>
    </div>
    <div class="p-6 grid grid-cols-1 md:grid-cols-3 gap-4">
        <a href="/Admin/Messages/Inbox" class="p-4 border rounded-lg hover:bg-gray-50 transition">
            <div class="flex items-center">
                <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                </svg>
                <div>
                    <h4 class="font-semibold">My Inbox</h4>
                    <p class="text-sm text-gray-600">View internal messages</p>
                </div>
            </div>
        </a>
        
        <a href="/Admin/Messages/AllMessages" class="p-4 border rounded-lg hover:bg-gray-50 transition">
            <div class="flex items-center">
                <svg class="w-8 h-8 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <div>
                    <h4 class="font-semibold">All Messages</h4>
                    <p class="text-sm text-gray-600">View queued & sent messages</p>
                </div>
            </div>
        </a>
        
        <a href="/Admin/Comms/CreateTemplate" class="p-4 border rounded-lg hover:bg-gray-50 transition">
            <div class="flex items-center">
                <svg class="w-8 h-8 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                <div>
                    <h4 class="font-semibold">Create Template</h4>
                    <p class="text-sm text-gray-600">New email or SMS template</p>
                </div>
            </div>
        </a>
    </div>
</div>
