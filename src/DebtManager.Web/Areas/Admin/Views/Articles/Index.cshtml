@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-6 flex items-center justify-between">
    <h2 class="text-2xl font-bold">Articles</h2>
    <a href="/Admin/Articles/Create" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
        Create New Article
    </a>
</div>

<div class="bg-white rounded-lg shadow">
    <div class="p-6 border-b">
        <h3 class="text-lg font-semibold">All Articles</h3>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50 border-b">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Slug</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Author</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Views</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var article in ViewBag.Articles as List<DebtManager.Domain.Articles.Article>)
                {
                    <tr>
                        <td class="px-6 py-4 text-sm font-medium">@article.Title</td>
                        <td class="px-6 py-4 text-sm text-gray-600">@article.Slug</td>
                        <td class="px-6 py-4 text-sm text-gray-600">@(article.AuthorName ?? "N/A")</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            @if (article.IsPublished)
                            {
                                <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">Published</span>
                            }
                            else
                            {
                                <span class="px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-800">Draft</span>
                            }
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600">@article.ViewCount</td>
                        <td class="px-6 py-4 text-sm text-gray-600">@article.CreatedAtUtc.ToString("yyyy-MM-dd")</td>
                        <td class="px-6 py-4 text-sm">
                            <div class="flex flex-wrap gap-2">
                                <a href="/Admin/Articles/Edit/@article.Id" class="text-blue-600 hover:underline">Edit</a>
                                <a href="/Article/View/@article.Slug" target="_blank" class="text-gray-600 hover:underline">Preview</a>
                                @if (article.IsPublished)
                                {
                                    <form method="post" action="/Admin/Articles/Unpublish/@article.Id" class="inline">
                                        <button type="submit" class="text-orange-600 hover:underline">Unpublish</button>
                                    </form>
                                }
                                else
                                {
                                    <form method="post" action="/Admin/Articles/Publish/@article.Id" class="inline">
                                        <button type="submit" class="text-green-600 hover:underline">Publish</button>
                                    </form>
                                }
                                <form method="post" action="/Admin/Articles/Delete/@article.Id" class="inline" onsubmit="return confirm('Are you sure you want to delete this article?');">
                                    <button type="submit" class="text-red-600 hover:underline">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (ViewBag.TotalPages > 1)
    {
        <div class="p-4 border-t flex justify-center gap-2">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                if (i == ViewBag.Page)
                {
                    <span class="px-3 py-1 bg-blue-600 text-white rounded">@i</span>
                }
                else
                {
                    <a href="/Admin/Articles?page=@i&pageSize=@ViewBag.PageSize" class="px-3 py-1 bg-gray-200 hover:bg-gray-300 rounded">@i</a>
                }
            }
        </div>
    }
</div>
