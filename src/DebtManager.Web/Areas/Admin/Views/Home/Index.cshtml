@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Dashboard";
    var pendingApplicationsCount = (int)ViewBag.PendingApplicationsCount;
    var totalDebtsCount = (int)ViewBag.TotalDebtsCount;
    var activeOrganizationsCount = (int)ViewBag.ActiveOrganizationsCount;
    var todayTransactionsTotal = (decimal)ViewBag.TodayTransactionsTotal;
}

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
    <!-- Stats Cards -->
    <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600">Pending Applications</p>
                <p class="text-2xl font-semibold mt-1">@pendingApplicationsCount</p>
                <p class="text-xs text-gray-500 mt-1">
                    @if (pendingApplicationsCount > 0)
                    {
                        <text>Requires attention</text>
                    }
                    else
                    {
                        <text>All caught up!</text>
                    }
                </p>
            </div>
            <div class="@(pendingApplicationsCount > 0 ? "bg-red-100" : "bg-green-100") rounded-full p-3">
                <svg class="w-6 h-6 @(pendingApplicationsCount > 0 ? "text-red-600" : "text-green-600")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
            </div>
        </div>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600">Total Debts</p>
                <p class="text-2xl font-semibold mt-1">@totalDebtsCount.ToString("N0")</p>
                <p class="text-xs text-gray-500 mt-1">Across all organizations</p>
            </div>
            <div class="bg-blue-100 rounded-full p-3">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
        </div>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600">Active Organizations</p>
                <p class="text-2xl font-semibold mt-1">@activeOrganizationsCount</p>
                <p class="text-xs text-gray-500 mt-1">Approved & active</p>
            </div>
            <div class="bg-green-100 rounded-full p-3">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
            </div>
        </div>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600">Transactions (Today)</p>
                <p class="text-2xl font-semibold mt-1">@todayTransactionsTotal.ToString("C")</p>
                <p class="text-xs text-gray-500 mt-1">@DateTime.UtcNow.ToString("MMM dd, yyyy")</p>
            </div>
            <div class="bg-purple-100 rounded-full p-3">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                </svg>
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Quick Actions -->
    <div class="bg-white rounded-lg shadow">
        <div class="p-6 border-b">
            <h3 class="text-lg font-semibold">Quick Actions</h3>
        </div>
        <div class="p-6">
            <div class="space-y-3">
                <a href="/Admin/Applications" class="block p-4 border rounded-lg hover:bg-gray-50 hover:border-blue-300 transition-all">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-3">
                            <div class="@(pendingApplicationsCount > 0 ? "bg-red-100 text-red-600" : "bg-green-100 text-green-600") rounded-full p-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                </svg>
                            </div>
                            <span class="font-medium">Review Pending Applications</span>
                        </div>
                        @if (pendingApplicationsCount > 0)
                        {
                            <span class="bg-red-600 text-white text-xs px-2 py-1 rounded-full font-semibold">@pendingApplicationsCount</span>
                        }
                        else
                        {
                            <span class="text-green-600 text-xs font-semibold">✓</span>
                        }
                    </div>
                </a>
                <a href="/Admin/Organizations" class="block p-4 border rounded-lg hover:bg-gray-50 hover:border-blue-300 transition-all">
                    <div class="flex items-center space-x-3">
                        <div class="bg-blue-100 text-blue-600 rounded-full p-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                            </svg>
                        </div>
                        <span class="font-medium">Manage Organizations</span>
                    </div>
                </a>
                <a href="/Admin/Comms" class="block p-4 border rounded-lg hover:bg-gray-50 hover:border-blue-300 transition-all">
                    <div class="flex items-center space-x-3">
                        <div class="bg-purple-100 text-purple-600 rounded-full p-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <span class="font-medium">Manage Templates</span>
                    </div>
                </a>
                <a href="/hangfire" class="block p-4 border rounded-lg hover:bg-gray-50 hover:border-blue-300 transition-all" target="_blank">
                    <div class="flex items-center space-x-3">
                        <div class="bg-yellow-100 text-yellow-600 rounded-full p-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                            </svg>
                        </div>
                        <span class="font-medium">View Hangfire Dashboard</span>
                    </div>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Recent Activity -->
    <div class="bg-white rounded-lg shadow">
        <div class="p-6 border-b flex items-center justify-between">
            <h3 class="text-lg font-semibold">System Overview</h3>
            <a href="/Admin/Audit" class="text-sm text-blue-600 hover:underline">View All Logs →</a>
        </div>
        <div class="p-6">
            <div class="space-y-4">
                <div class="flex items-start space-x-3 p-3 rounded-lg bg-gray-50">
                    <div class="flex-shrink-0 w-2 h-2 mt-2 bg-blue-500 rounded-full"></div>
                    <div class="flex-1">
                        <p class="text-sm font-medium">Total Debts in System</p>
                        <p class="text-lg font-semibold text-blue-600">@totalDebtsCount.ToString("N0")</p>
                    </div>
                </div>
                <div class="flex items-start space-x-3 p-3 rounded-lg bg-gray-50">
                    <div class="flex-shrink-0 w-2 h-2 mt-2 bg-green-500 rounded-full"></div>
                    <div class="flex-1">
                        <p class="text-sm font-medium">Active Organizations</p>
                        <p class="text-lg font-semibold text-green-600">@activeOrganizationsCount</p>
                    </div>
                </div>
                <div class="flex items-start space-x-3 p-3 rounded-lg bg-gray-50">
                    <div class="flex-shrink-0 w-2 h-2 mt-2 @(pendingApplicationsCount > 0 ? "bg-red-500" : "bg-gray-300") rounded-full"></div>
                    <div class="flex-1">
                        <p class="text-sm font-medium">Pending Applications</p>
                        <p class="text-lg font-semibold @(pendingApplicationsCount > 0 ? "text-red-600" : "text-gray-500")">@pendingApplicationsCount</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
