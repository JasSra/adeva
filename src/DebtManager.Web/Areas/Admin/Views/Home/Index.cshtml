@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Dashboard";
    var pendingApplicationsCount = (int)ViewBag.PendingApplicationsCount;
    var totalDebtsCount = (int)ViewBag.TotalDebtsCount;
    var activeOrganizationsCount = (int)ViewBag.ActiveOrganizationsCount;
    var todayTransactionsTotal = (decimal)ViewBag.TodayTransactionsTotal;
}

<!-- Page Header -->
<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
    <p class="text-sm text-gray-600 mt-2">Platform overview and key metrics at a glance</p>
</div>

<!-- Alert Banner for Pending Applications -->
@if (pendingApplicationsCount > 0)
{
    <div class="mb-6 bg-gradient-to-r from-red-50 to-orange-50 border-l-4 border-red-500 rounded-lg p-4 shadow-sm">
        <div class="flex items-start">
            <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
            </div>
            <div class="ml-3 flex-1">
                <h3 class="text-sm font-semibold text-red-800">Action Required</h3>
                <p class="text-sm text-red-700 mt-1">
                    You have <strong>@pendingApplicationsCount</strong> pending @(pendingApplicationsCount == 1 ? "application" : "applications") awaiting review.
                </p>
                <div class="mt-3">
                    <a href="/Admin/Applications" class="inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                        Review Applications Now
                    </a>
                </div>
            </div>
        </div>
    </div>
}

<!-- Key Metrics Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Stat Card: Pending Applications -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
        <div class="p-6">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-3">
                    <div class="@(pendingApplicationsCount > 0 ? "bg-red-100" : "bg-green-100") rounded-lg p-3">
                        <svg class="w-6 h-6 @(pendingApplicationsCount > 0 ? "text-red-600" : "text-green-600")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Applications</p>
                        <p class="text-2xl font-bold text-gray-900 mt-1">@pendingApplicationsCount</p>
                    </div>
                </div>
                @if (pendingApplicationsCount > 0)
                {
                    <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-800">
                        Pending
                    </span>
                }
                else
                {
                    <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">
                        âœ“ Clear
                    </span>
                }
            </div>
            <p class="text-sm text-gray-600">
                @if (pendingApplicationsCount > 0)
                {
                    <text>Require immediate review and approval</text>
                }
                else
                {
                    <text>All applications processed</text>
                }
            </p>
        </div>
        @if (pendingApplicationsCount > 0)
        {
            <div class="bg-red-50 px-6 py-3 border-t border-red-100">
                <a href="/Admin/Applications" class="text-sm font-medium text-red-700 hover:text-red-800 flex items-center">
                    Review now
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </a>
            </div>
        }
    </div>
    
    <!-- Stat Card: Total Debts -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
        <div class="p-6">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-3">
                    <div class="bg-blue-100 rounded-lg p-3">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Total Debts</p>
                        <p class="text-2xl font-bold text-gray-900 mt-1">@totalDebtsCount.ToString("N0")</p>
                    </div>
                </div>
            </div>
            <p class="text-sm text-gray-600">Across all organizations in system</p>
        </div>
        <div class="bg-gray-50 px-6 py-3 border-t border-gray-100">
            <a href="/Admin/Debts" class="text-sm font-medium text-blue-700 hover:text-blue-800 flex items-center">
                View all debts
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </a>
        </div>
    </div>
    
    <!-- Stat Card: Active Organizations -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
        <div class="p-6">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-3">
                    <div class="bg-green-100 rounded-lg p-3">
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Organizations</p>
                        <p class="text-2xl font-bold text-gray-900 mt-1">@activeOrganizationsCount</p>
                    </div>
                </div>
                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">
                    Active
                </span>
            </div>
            <p class="text-sm text-gray-600">Approved and currently active</p>
        </div>
        <div class="bg-gray-50 px-6 py-3 border-t border-gray-100">
            <a href="/Admin/Organizations" class="text-sm font-medium text-green-700 hover:text-green-800 flex items-center">
                Manage organizations
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </a>
        </div>
    </div>
    
    <!-- Stat Card: Today's Transactions -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
        <div class="p-6">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-3">
                    <div class="bg-purple-100 rounded-lg p-3">
                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Today's Volume</p>
                        <p class="text-2xl font-bold text-gray-900 mt-1">@todayTransactionsTotal.ToString("C0")</p>
                    </div>
                </div>
            </div>
            <p class="text-sm text-gray-600">@DateTime.UtcNow.ToString("MMMM dd, yyyy")</p>
        </div>
        <div class="bg-gray-50 px-6 py-3 border-t border-gray-100">
            <a href="/Admin/Transactions" class="text-sm font-medium text-purple-700 hover:text-purple-800 flex items-center">
                View transactions
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </a>
        </div>
    </div>
</div>

<!-- Main Content Grid -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <!-- Quick Actions -->
    <div class="lg:col-span-2 bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Quick Actions</h2>
            <p class="text-sm text-gray-600 mt-1">Common administrative tasks</p>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <a href="/Admin/Applications" class="group relative bg-gradient-to-br @(pendingApplicationsCount > 0 ? "from-red-50 to-orange-50 border-red-200" : "from-green-50 to-emerald-50 border-green-200") border-2 rounded-lg p-4 hover:shadow-md transition-all">
                    <div class="flex items-start justify-between">
                        <div class="flex items-start space-x-3">
                            <div class="@(pendingApplicationsCount > 0 ? "bg-red-100" : "bg-green-100") rounded-lg p-2.5 group-hover:scale-110 transition-transform">
                                <svg class="w-5 h-5 @(pendingApplicationsCount > 0 ? "text-red-600" : "text-green-600")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900 text-sm">Review Applications</h3>
                                <p class="text-xs text-gray-600 mt-1">
                                    @if (pendingApplicationsCount > 0)
                                    {
                                        <text>@pendingApplicationsCount pending @(pendingApplicationsCount == 1 ? "application" : "applications")</text>
                                    }
                                    else
                                    {
                                        <text>All applications reviewed</text>
                                    }
                                </p>
                            </div>
                        </div>
                        @if (pendingApplicationsCount > 0)
                        {
                            <span class="flex-shrink-0 inline-flex items-center px-2 py-1 rounded-full text-xs font-bold bg-red-600 text-white">
                                @pendingApplicationsCount
                            </span>
                        }
                        else
                        {
                            <span class="flex-shrink-0 text-green-600">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                            </span>
                        }
                    </div>
                </a>
                
                <a href="/Admin/Organizations" class="group relative bg-gradient-to-br from-blue-50 to-indigo-50 border-2 border-blue-200 rounded-lg p-4 hover:shadow-md transition-all">
                    <div class="flex items-start space-x-3">
                        <div class="bg-blue-100 rounded-lg p-2.5 group-hover:scale-110 transition-transform">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-900 text-sm">Manage Organizations</h3>
                            <p class="text-xs text-gray-600 mt-1">View and configure client organizations</p>
                        </div>
                    </div>
                </a>
                
                <a href="/Admin/Debtors" class="group relative bg-gradient-to-br from-purple-50 to-pink-50 border-2 border-purple-200 rounded-lg p-4 hover:shadow-md transition-all">
                    <div class="flex items-start space-x-3">
                        <div class="bg-purple-100 rounded-lg p-2.5 group-hover:scale-110 transition-transform">
                            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-900 text-sm">Manage Debtors</h3>
                            <p class="text-xs text-gray-600 mt-1">View and manage debtor records</p>
                        </div>
                    </div>
                </a>
                
                <a href="/Admin/Comms" class="group relative bg-gradient-to-br from-amber-50 to-yellow-50 border-2 border-amber-200 rounded-lg p-4 hover:shadow-md transition-all">
                    <div class="flex items-start space-x-3">
                        <div class="bg-amber-100 rounded-lg p-2.5 group-hover:scale-110 transition-transform">
                            <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-900 text-sm">Communications</h3>
                            <p class="text-xs text-gray-600 mt-1">Manage templates and messages</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    
    <!-- System Health & Info -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">System Status</h2>
            <p class="text-sm text-gray-600 mt-1">Platform health overview</p>
        </div>
        <div class="p-6">
            <div class="space-y-4">
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <div class="flex items-center space-x-3">
                        <div class="flex-shrink-0">
                            <span class="flex h-3 w-3 relative">
                                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                                <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
                            </span>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-900">Platform Status</p>
                            <p class="text-xs text-gray-600">All systems operational</p>
                        </div>
                    </div>
                    <span class="text-xs font-semibold text-green-700">Online</span>
                </div>
                
                <div class="flex items-center justify-between p-3 bg-blue-50 rounded-lg">
                    <div class="flex items-center space-x-3">
                        <div class="bg-blue-100 rounded p-1.5">
                            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-900">Organizations</p>
                            <p class="text-xs text-gray-600">Active clients</p>
                        </div>
                    </div>
                    <span class="text-lg font-bold text-blue-700">@activeOrganizationsCount</span>
                </div>
                
                <div class="flex items-center justify-between p-3 bg-purple-50 rounded-lg">
                    <div class="flex items-center space-x-3">
                        <div class="bg-purple-100 rounded p-1.5">
                            <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-900">Total Debts</p>
                            <p class="text-xs text-gray-600">System-wide</p>
                        </div>
                    </div>
                    <span class="text-lg font-bold text-purple-700">@totalDebtsCount.ToString("N0")</span>
                </div>
            </div>
            
            <div class="mt-6 pt-6 border-t border-gray-200">
                <a href="/Admin/Audit" class="flex items-center justify-between text-sm text-gray-700 hover:text-gray-900 group">
                    <span class="font-medium">View Audit Logs</span>
                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Additional Resources -->
<div class="bg-gradient-to-r from-blue-600 to-indigo-600 rounded-xl shadow-lg p-6 text-white">
    <div class="flex items-center justify-between">
        <div>
            <h3 class="text-lg font-semibold">Need Help?</h3>
            <p class="text-sm text-blue-100 mt-1">Access documentation, support resources, or view system jobs</p>
        </div>
        <div class="flex items-center space-x-3">
            <a href="/hangfire" target="_blank" class="inline-flex items-center px-4 py-2 bg-white bg-opacity-20 hover:bg-opacity-30 rounded-lg text-sm font-medium transition-all backdrop-blur-sm">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
                Background Jobs
            </a>
            <a href="/Admin/Configuration" class="inline-flex items-center px-4 py-2 bg-white bg-opacity-20 hover:bg-opacity-30 rounded-lg text-sm font-medium transition-all backdrop-blur-sm">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Settings
            </a>
        </div>
    </div>
</div>
