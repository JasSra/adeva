@model DebtManager.Web.Areas.Admin.Controllers.SecretsVm
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Secrets & Configuration";
}

<div class="mb-6">
    <ul class="flex border-b">
        <li class="mr-1">
            <a href="/Admin/Configuration" class="inline-block py-2 px-4 text-gray-600 hover:text-blue-600">General</a>
        </li>
        <li class="mr-1">
            <a href="/Admin/Configuration/Branding" class="inline-block py-2 px-4 text-gray-600 hover:text-blue-600">Branding</a>
        </li>
        <li class="mr-1">
            <a href="/Admin/Configuration/Integrations" class="inline-block py-2 px-4 text-gray-600 hover:text-blue-600">Integrations</a>
        </li>
        <li class="mr-1">
            <span class="inline-block py-2 px-4 bg-white border-b-2 border-blue-600 text-blue-600 font-semibold">Secrets</span>
        </li>
    </ul>
</div>

@if (TempData["Message"] is string msg)
{
    <div class="p-3 mb-4 bg-green-100 text-green-800 rounded">@msg</div>
}

<form method="get" class="mb-4 flex gap-2">
    <input type="text" name="q" value="@Model.Query" class="border p-2 rounded w-full" placeholder="Search keys (e.g., Stripe)" />
    <button class="px-4 py-2 bg-gray-800 text-white rounded">Search</button>
</form>

@if (!Model.Health.IsBootstrapComplete)
{
    <div class="p-3 mb-4 bg-yellow-100 text-yellow-800 rounded">
        <strong>Bootstrap required (@Model.Health.Environment):</strong> Please set the following keys:
        <ul class="list-disc ml-5">
            @foreach (var k in Model.Health.MissingKeys) { <li>@k</li> }
        </ul>
    </div>
}
@if (Model.Health.Warnings.Any())
{
    <div class="p-3 mb-4 bg-amber-50 text-amber-900 rounded">
        <ul class="list-disc ml-5">
            @foreach (var w in Model.Health.Warnings) { <li>@w</li> }
        </ul>
    </div>
}

<div class="bg-white rounded shadow">
    <div class="p-4 border-b">
        <h3 class="text-lg font-semibold">Add or Update Entry</h3>
    </div>
    <div class="p-4">
        <form asp-action="Save" method="post" class="grid grid-cols-1 gap-4">
            @Html.AntiForgeryToken()
            <div class="grid md:grid-cols-3 gap-3 items-center">
                <input name="Key" placeholder="Key (e.g., Stripe:SecretKey)" class="border p-2 rounded w-full" />
                <input name="Value" placeholder="Value" class="border p-2 rounded w-full" />
                <label class="inline-flex items-center gap-2"><input type="checkbox" name="IsSecret" /> Secret</label>
            </div>
            <div>
                <button class="px-4 py-2 bg-blue-600 text-white rounded">Add/Update</button>
            </div>
        </form>
    </div>
</div>

@foreach (var group in Model.Groups)
{
    <div class="mt-6 bg-white rounded shadow">
        <div class="p-4 border-b">
            <h3 class="text-lg font-semibold">@group.Key</h3>
        </div>
        <div class="p-4 overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="text-left border-b">
                        <th class="py-2">Key</th>
                        <th class="py-2">Value</th>
                        <th class="py-2">Secret</th>
                        <th class="py-2"></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var c in group.Value)
                {
                    <tr class="border-b">
                        <td class="py-2 font-mono text-sm">@c.Key</td>
                        <td class="py-2 font-mono text-sm">
                            <form asp-action="Save" method="post" class="flex items-center gap-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="Key" value="@c.Key" />
                                <input name="Value" value="@c.Value" class="border p-1 rounded w-full" placeholder="(empty)" />
                                <label class="inline-flex items-center gap-1 text-xs"><input type="checkbox" name="IsSecret" @(c.IsSecret ? "checked" : "") /> Secret</label>
                                <button class="px-2 py-1 bg-blue-600 text-white rounded text-sm">Save</button>
                            </form>
                        </td>
                        <td class="py-2">@(c.IsSecret ? "Yes" : "No")</td>
                        <td class="py-2">
                            <form asp-action="Delete" method="post" onsubmit="return confirm('Delete key @c.Key?')">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="key" value="@c.Key" />
                                <button class="px-2 py-1 bg-red-600 text-white rounded text-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}
