@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">üé® Branding Configuration</h2>
    <p class="text-sm text-gray-600 dark:text-gray-400">Manage theme colors, assets, and organization identity.</p>
</div>

<!-- Navigation Tabs -->
<div class="mb-6">
    <ul class="flex flex-wrap border-b border-gray-200 dark:border-gray-700">
        <li class="mr-1">
            <a href="/Admin/Configuration" class="inline-block py-3 px-4 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">General</a>
        </li>
        <li class="mr-1">
            <a href="/Admin/Configuration/Fees" class="inline-block py-3 px-4 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">Fees</a>
        </li>
        <li class="mr-1">
            <span class="inline-block py-3 px-4 bg-blue-50 dark:bg-blue-900/50 border-b-2 border-blue-600 text-blue-600 dark:text-blue-400 font-semibold">Branding</span>
        </li>
        <li class="mr-1">
            <a href="/Admin/Configuration/Integrations" class="inline-block py-3 px-4 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">Integrations</a>
        </li>
        <li class="mr-1">
            <a href="/Admin/Configuration/Secrets" class="inline-block py-3 px-4 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">üîê Secrets</a>
        </li>
        <li class="mr-1">
            <a href="/Admin/Audit" class="inline-block py-3 px-4 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">üìã Audit Log</a>
        </li>
    </ul>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Theme</h3>
            <p class="text-xs text-gray-600 dark:text-gray-400">Primary and secondary colors</p>
        </div>
        <div class="p-6 space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Primary Color (HEX)</label>
                <input type="text" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white" placeholder="#0ea5e9">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Secondary Color (HEX)</label>
                <input type="text" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white" placeholder="#1e293b">
            </div>
            <div>
                <button class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Save</button>
                <span class="ml-3 text-xs text-gray-500">Saves not wired yet</span>
            </div>
        </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Assets</h3>
            <p class="text-xs text-gray-600 dark:text-gray-400">Logos and wordmarks</p>
        </div>
        <div class="p-6 space-y-3">
            <div class="flex items-center justify-between">
                <span class="text-sm text-gray-700 dark:text-gray-300">Upload Logo</span>
                <button class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded">Choose File</button>
            </div>
            <div class="flex items-center justify-between">
                <span class="text-sm text-gray-700 dark:text-gray-300">Upload Wordmark</span>
                <button class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded">Choose File</button>
            </div>
        </div>
    </div>
</div>

