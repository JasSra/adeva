@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">🔌 Integration Settings</h2>
    <p class="text-sm text-gray-600 dark:text-gray-400">Configure third-party providers used by the platform.</p>
</div>

<!-- Navigation Tabs -->
<div class="mb-6">
    <ul class="flex flex-wrap border-b border-gray-200 dark:border-gray-700">
        <li class="mr-1">
            <a href="/Admin/Configuration" class="inline-block py-3 px-4 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">General</a>
        </li>
        <li class="mr-1">
            <a href="/Admin/Configuration/Fees" class="inline-block py-3 px-4 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">Fees</a>
        </li>
        <li class="mr-1">
            <a href="/Admin/Configuration/Branding" class="inline-block py-3 px-4 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">Branding</a>
        </li>
        <li class="mr-1">
            <span class="inline-block py-3 px-4 bg-blue-50 dark:bg-blue-900/50 border-b-2 border-blue-600 text-blue-600 dark:text-blue-400 font-semibold">Integrations</span>
        </li>
        <li class="mr-1">
            <a href="/Admin/Configuration/Secrets" class="inline-block py-3 px-4 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">🔐 Secrets</a>
        </li>
        <li class="mr-1">
            <a href="/Admin/Audit" class="inline-block py-3 px-4 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">📋 Audit Log</a>
        </li>
    </ul>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700 bg-gradient-to-r from-rose-50 to-pink-50 dark:from-rose-900/30 dark:to-pink-900/30">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Stripe</h3>
            <p class="text-xs text-gray-600 dark:text-gray-400">Payments processing</p>
        </div>
        <div class="p-6 space-y-3">
            <p class="text-sm text-gray-600 dark:text-gray-400">Manage keys in <a class="text-blue-600" href="/Admin/Configuration/Secrets">Secrets</a></p>
            <label class="inline-flex items-center gap-2">
                <input type="checkbox" class="w-4 h-4">
                <span class="text-sm text-gray-700 dark:text-gray-300">Enable Live Mode</span>
            </label>
            <button class="px-4 py-2 bg-blue-600 text-white rounded">Save</button>
        </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700 bg-gradient-to-r from-sky-50 to-blue-50 dark:from-sky-900/30 dark:to-blue-900/30">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Twilio</h3>
            <p class="text-xs text-gray-600 dark:text-gray-400">SMS and voice</p>
        </div>
        <div class="p-6 space-y-3">
            <p class="text-sm text-gray-600 dark:text-gray-400">Manage keys in <a class="text-blue-600" href="/Admin/Configuration/Secrets">Secrets</a></p>
            <label class="inline-flex items-center gap-2">
                <input type="checkbox" class="w-4 h-4">
                <span class="text-sm text-gray-700 dark:text-gray-300">Send SMS in production</span>
            </label>
            <button class="px-4 py-2 bg-blue-600 text-white rounded">Save</button>
        </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700 bg-gradient-to-r from-emerald-50 to-green-50 dark:from-emerald-900/30 dark:to-green-900/30">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">OpenAI</h3>
            <p class="text-xs text-gray-600 dark:text-gray-400">AI assistance</p>
        </div>
        <div class="p-6 space-y-3">
            <p class="text-sm text-gray-600 dark:text-gray-400">Manage keys in <a class="text-blue-600" href="/Admin/Configuration/Secrets">Secrets</a></p>
            <label class="inline-flex items-center gap-2">
                <input type="checkbox" class="w-4 h-4">
                <span class="text-sm text-gray-700 dark:text-gray-300">Enable AI features</span>
            </label>
            <button class="px-4 py-2 bg-blue-600 text-white rounded">Save</button>
        </div>
    </div>
</div>

