@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Test Scenarios";
}

<div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Test Scenarios</h2>
    <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
        Manage dummy data for development, testing, and demonstration purposes
    </p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="mb-6 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded">
        <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            @TempData["SuccessMessage"]
        </div>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded">
        <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            @TempData["ErrorMessage"]
        </div>
    </div>
}

@if (ViewBag.HasDummyData == true)
{
    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4 mb-6">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4">
            <p class="text-sm text-gray-600 dark:text-gray-400">Organizations</p>
            <p class="text-2xl font-bold text-gray-900 dark:text-white mt-1">@ViewBag.OrganizationCount</p>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4">
            <p class="text-sm text-gray-600 dark:text-gray-400">Debtors</p>
            <p class="text-2xl font-bold text-gray-900 dark:text-white mt-1">@ViewBag.DebtorCount</p>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4">
            <p class="text-sm text-gray-600 dark:text-gray-400">Debts</p>
            <p class="text-2xl font-bold text-gray-900 dark:text-white mt-1">@ViewBag.DebtCount</p>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4">
            <p class="text-sm text-gray-600 dark:text-gray-400">Payment Plans</p>
            <p class="text-2xl font-bold text-gray-900 dark:text-white mt-1">@ViewBag.PaymentPlanCount</p>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4">
            <p class="text-sm text-gray-600 dark:text-gray-400">Transactions</p>
            <p class="text-2xl font-bold text-gray-900 dark:text-white mt-1">@ViewBag.TransactionCount</p>
        </div>
    </div>

    <!-- Scenarios Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
        <!-- Organization Scenarios -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
            <div class="p-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Organization Scenarios</h3>
            </div>
            <div class="p-4">
                <div class="space-y-3">
                    <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-900 rounded">
                        <div class="flex items-center">
                            <div class="w-2 h-2 bg-yellow-500 rounded-full mr-3"></div>
                            <span class="text-sm text-gray-700 dark:text-gray-300">Pending Approval</span>
                        </div>
                        <span class="text-sm font-semibold text-gray-900 dark:text-white">@ViewBag.PendingOrgCount</span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-900 rounded">
                        <div class="flex items-center">
                            <div class="w-2 h-2 bg-red-500 rounded-full mr-3"></div>
                            <span class="text-sm text-gray-700 dark:text-gray-300">Rejected</span>
                        </div>
                        <span class="text-sm font-semibold text-gray-900 dark:text-white">@ViewBag.RejectedOrgCount</span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-900 rounded">
                        <div class="flex items-center">
                            <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
                            <span class="text-sm text-gray-700 dark:text-gray-300">Active & Established</span>
                        </div>
                        <span class="text-sm font-semibold text-gray-900 dark:text-white">@ViewBag.ActiveOrgCount</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Customer Scenarios -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
            <div class="p-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Customer Scenarios</h3>
            </div>
            <div class="p-4">
                <div class="space-y-3">
                    <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-900 rounded">
                        <div class="flex items-center">
                            <div class="w-2 h-2 bg-blue-500 rounded-full mr-3"></div>
                            <span class="text-sm text-gray-700 dark:text-gray-300">New Customer</span>
                        </div>
                        <span class="text-sm font-semibold text-gray-900 dark:text-white">@ViewBag.NewCustomerCount</span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-900 rounded">
                        <div class="flex items-center">
                            <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
                            <span class="text-sm text-gray-700 dark:text-gray-300">Active & Paying</span>
                        </div>
                        <span class="text-sm font-semibold text-gray-900 dark:text-white">@ViewBag.ActiveCustomerCount</span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-900 rounded">
                        <div class="flex items-center">
                            <div class="w-2 h-2 bg-orange-500 rounded-full mr-3"></div>
                            <span class="text-sm text-gray-700 dark:text-gray-300">Delinquent</span>
                        </div>
                        <span class="text-sm font-semibold text-gray-900 dark:text-white">@ViewBag.DelinquentCustomerCount</span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-900 rounded">
                        <div class="flex items-center">
                            <div class="w-2 h-2 bg-purple-500 rounded-full mr-3"></div>
                            <span class="text-sm text-gray-700 dark:text-gray-300">Settled</span>
                        </div>
                        <span class="text-sm font-semibold text-gray-900 dark:text-white">@ViewBag.SettledCustomerCount</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Debt Scenarios -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
            <div class="p-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Debt Scenarios</h3>
            </div>
            <div class="p-4">
                <div class="space-y-3">
                    <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-900 rounded">
                        <div class="flex items-center">
                            <div class="w-2 h-2 bg-blue-500 rounded-full mr-3"></div>
                            <span class="text-sm text-gray-700 dark:text-gray-300">New Debt</span>
                        </div>
                        <span class="text-sm font-semibold text-gray-900 dark:text-white">@ViewBag.NewDebtCount</span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-900 rounded">
                        <div class="flex items-center">
                            <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
                            <span class="text-sm text-gray-700 dark:text-gray-300">Active on Plan</span>
                        </div>
                        <span class="text-sm font-semibold text-gray-900 dark:text-white">@ViewBag.ActiveDebtCount</span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-900 rounded">
                        <div class="flex items-center">
                            <div class="w-2 h-2 bg-red-500 rounded-full mr-3"></div>
                            <span class="text-sm text-gray-700 dark:text-gray-300">In Arrears</span>
                        </div>
                        <span class="text-sm font-semibold text-gray-900 dark:text-white">@ViewBag.ArrearsDebtCount</span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-900 rounded">
                        <div class="flex items-center">
                            <div class="w-2 h-2 bg-yellow-500 rounded-full mr-3"></div>
                            <span class="text-sm text-gray-700 dark:text-gray-300">Disputed</span>
                        </div>
                        <span class="text-sm font-semibold text-gray-900 dark:text-white">@ViewBag.DisputedDebtCount</span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-900 rounded">
                        <div class="flex items-center">
                            <div class="w-2 h-2 bg-purple-500 rounded-full mr-3"></div>
                            <span class="text-sm text-gray-700 dark:text-gray-300">Settled</span>
                        </div>
                        <span class="text-sm font-semibold text-gray-900 dark:text-white">@ViewBag.SettledDebtCount</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Actions</h3>
        <div class="flex space-x-4">
            <form method="post" asp-action="Clear" onsubmit="return confirm('Are you sure you want to clear all dummy data? This action cannot be undone.');">
                @Html.AntiForgeryToken()
                <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">
                    Clear All Dummy Data
                </button>
            </form>
            <a href="/Admin/Organizations?search=&status=" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                View Organizations
            </a>
            <a href="/Admin/Debtors" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                View Debtors
            </a>
            <a href="/Admin/Debts" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                View Debts
            </a>
        </div>
    </div>
}
else
{
    <!-- Empty State -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
        <div class="p-12 text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full mb-4">
                <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">No Dummy Data Found</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-6 max-w-md mx-auto">
                Generate realistic test data including organizations, customers, debts, and payment plans for development and testing purposes.
            </p>
            
            <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-6 mb-6 max-w-2xl mx-auto">
                <h4 class="font-semibold text-gray-900 dark:text-white mb-3">What will be created:</h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-left">
                    <div>
                        <p class="font-medium text-gray-900 dark:text-white mb-2">Organizations (4)</p>
                        <ul class="space-y-1 text-gray-600 dark:text-gray-400">
                            <li>• Pending approval</li>
                            <li>• Rejected</li>
                            <li>• Active & established</li>
                            <li>• Recently approved</li>
                        </ul>
                    </div>
                    <div>
                        <p class="font-medium text-gray-900 dark:text-white mb-2">Customers (~20)</p>
                        <ul class="space-y-1 text-gray-600 dark:text-gray-400">
                            <li>• New customers</li>
                            <li>• Invited customers</li>
                            <li>• Active & paying</li>
                            <li>• Delinquent</li>
                            <li>• Settled</li>
                        </ul>
                    </div>
                    <div>
                        <p class="font-medium text-gray-900 dark:text-white mb-2">Debts (~15-20)</p>
                        <ul class="space-y-1 text-gray-600 dark:text-gray-400">
                            <li>• New debts</li>
                            <li>• Active with plans</li>
                            <li>• In arrears</li>
                            <li>• Disputed</li>
                            <li>• Settled</li>
                        </ul>
                    </div>
                    <div>
                        <p class="font-medium text-gray-900 dark:text-white mb-2">Additional Data</p>
                        <ul class="space-y-1 text-gray-600 dark:text-gray-400">
                            <li>• ~10 Payment plans</li>
                            <li>• ~5 Transactions</li>
                            <li>• Multiple scenarios</li>
                        </ul>
                    </div>
                </div>
            </div>

            <form method="post" asp-action="Seed">
                @Html.AntiForgeryToken()
                <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium">
                    Generate Dummy Data
                </button>
            </form>
            
            <p class="text-xs text-gray-500 dark:text-gray-500 mt-4">
                All generated data will be tagged as "dummy" for easy identification and removal
            </p>
        </div>
    </div>

    <!-- Documentation -->
    <div class="mt-6 bg-white dark:bg-gray-800 rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Documentation</h3>
        <div class="prose dark:prose-invert max-w-none">
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">
                The dummy data seeder creates realistic test scenarios for:
            </p>
            <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-1">
                <li><strong>Development:</strong> Test features with realistic data</li>
                <li><strong>Testing:</strong> Validate workflows across different entity states</li>
                <li><strong>Demonstration:</strong> Show the application with complete scenarios</li>
                <li><strong>Training:</strong> Provide familiar scenarios for user onboarding</li>
            </ul>
            <p class="text-sm text-gray-600 dark:text-gray-400 mt-3">
                All entities are tagged with <code class="px-1 py-0.5 bg-gray-100 dark:bg-gray-900 rounded text-xs">dummy</code> and specific scenario tags for easy filtering.
                Learn more in the <a href="https://github.com/JasSra/adeva/blob/main/docs/Dummy-Data-Seeding.md" target="_blank" class="text-blue-600 hover:underline">documentation</a>.
            </p>
        </div>
    </div>
}
