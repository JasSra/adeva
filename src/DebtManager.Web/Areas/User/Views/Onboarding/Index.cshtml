@model DebtManager.Web.Areas.User.Controllers.DebtorOnboardingVm
@{
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
    ViewBag.Title = "Complete Your Profile";
}
<h2 class="text-xl font-semibold mb-4">Complete Your Profile</h2>

@if (ViewBag.OnboardingInfo is string info && !string.IsNullOrWhiteSpace(info))
{
    <div class="p-3 bg-yellow-50 border border-yellow-200 text-yellow-800 dark:bg-yellow-900/20 dark:border-yellow-900/40 dark:text-yellow-200 rounded mb-3">@info</div>
}

@if (TempData["Message"] != null)
{
    <div class="p-3 bg-green-100 border border-green-300 text-green-800 dark:bg-green-900/20 dark:border-green-900/40 dark:text-green-200 rounded mb-3">@TempData["Message"]</div>
}

<form action="/User/Onboarding/Create" method="post" class="space-y-4">
    @Html.AntiForgeryToken()
    <div>
        <label class="block text-sm text-gray-700 dark:text-gray-300">First Name</label>
        <input name="FirstName" value="@Model.FirstName" class="border border-gray-300 dark:border-gray-700 dark:bg-gray-900 p-2 w-full rounded" />
        <span class="text-red-700 dark:text-red-400 text-sm">@Html.ValidationMessage("FirstName")</span>
    </div>
    <div>
        <label class="block text-sm text-gray-700 dark:text-gray-300">Last Name</label>
        <input name="LastName" value="@Model.LastName" class="border border-gray-300 dark:border-gray-700 dark:bg-gray-900 p-2 w-full rounded" />
        <span class="text-red-700 dark:text-red-400 text-sm">@Html.ValidationMessage("LastName")</span>
    </div>
    <button class="bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded">Save</button>
</form>
