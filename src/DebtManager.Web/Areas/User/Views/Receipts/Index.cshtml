@{
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<div class="bg-white rounded-lg shadow">
    <div class="p-6 border-b flex items-center justify-between">
        <h3 class="text-lg font-semibold">Payment Receipts</h3>
        <div class="flex gap-2">
            <input type="date" class="border rounded px-3 py-2 text-sm" />
            <button class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-sm">Filter</button>
        </div>
    </div>
    
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50 border-b">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Receipt #</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Debt Reference</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Payment Method</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">#R-1234</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">2024-12-15</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">#D-5001</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold">$500.00</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Credit Card</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                        <a href="/User/Receipts/View/1234" class="text-blue-600 hover:underline">View</a>
                        <a href="/User/Receipts/Download/1234" class="text-green-600 hover:underline">Download</a>
                    </td>
                </tr>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">#R-1233</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">2024-11-15</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">#D-5001</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold">$750.00</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Bank Transfer</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                        <a href="/User/Receipts/View/1233" class="text-blue-600 hover:underline">View</a>
                        <a href="/User/Receipts/Download/1233" class="text-green-600 hover:underline">Download</a>
                    </td>
                </tr>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">#R-1232</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">2024-10-15</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">#D-5001</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold">$500.00</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Credit Card</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                        <a href="/User/Receipts/View/1232" class="text-blue-600 hover:underline">View</a>
                        <a href="/User/Receipts/Download/1232" class="text-green-600 hover:underline">Download</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    
    <div class="px-6 py-4 border-t bg-gray-50 flex items-center justify-between">
        <div class="text-sm text-gray-700">
            Showing <span class="font-medium">1</span> to <span class="font-medium">3</span> of <span class="font-medium">3</span> results
        </div>
        <div class="flex gap-2">
            <button disabled class="px-3 py-1 border rounded text-sm bg-gray-100 text-gray-400 cursor-not-allowed">Previous</button>
            <button class="px-3 py-1 border rounded text-sm bg-blue-600 text-white">1</button>
            <button disabled class="px-3 py-1 border rounded text-sm bg-gray-100 text-gray-400 cursor-not-allowed">Next</button>
        </div>
    </div>
</div>
