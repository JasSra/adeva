@model DebtManager.Web.Areas.User.Controllers.ReceiptsIndexVm
@{
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<div class="bg-white rounded-lg shadow">
    <div class="p-6 border-b flex items-center justify-between">
        <h3 class="text-lg font-semibold">Payment Receipts</h3>
        <form method="get" class="flex gap-2 items-center">
            <input type="text" name="search" value="@ViewBag.Search" placeholder="Debt reference" class="border rounded px-3 py-2 text-sm" />
            <input type="date" name="from" value="@(ViewBag.From is DateTime ? ((DateTime)ViewBag.From).ToString("yyyy-MM-dd") : string.Empty)" class="border rounded px-3 py-2 text-sm" />
            <input type="date" name="to" value="@(ViewBag.To is DateTime ? ((DateTime)ViewBag.To).ToString("yyyy-MM-dd") : string.Empty)" class="border rounded px-3 py-2 text-sm" />
            <button class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-sm">Filter</button>
        </form>
    </div>
    
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50 border-b">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Receipt #</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Debt Reference</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Payment Method</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (Model.Items.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="px-6 py-6 text-sm text-gray-600">No receipts found.</td>
                    </tr>
                }
                else
                {
                    @foreach (var r in Model.Items)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">#@r.ReceiptNumber</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@r.ProcessedAtUtc.ToLocalTime()</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">@r.DebtReference</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold">@r.Currency @r.Amount.ToString("N2")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@r.Method</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                                <a href="/User/Receipts/View/@r.Id" class="text-blue-600 hover:underline">View</a>
                                <a href="/User/Receipts/Download/@r.Id" class="text-green-600 hover:underline">Download</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    
    <div class="px-6 py-4 border-t bg-gray-50 flex items-center justify-between">
        <div class="text-sm text-gray-700">
            @{
                var from = (Model.Total == 0) ? 0 : ((Model.Page - 1) * Model.PageSize) + 1;
                var to = Math.Min(Model.Page * Model.PageSize, Model.Total);
            }
            Showing <span class="font-medium">@from</span> to <span class="font-medium">@to</span> of <span class="font-medium">@Model.Total</span> results
        </div>
        <div class="flex gap-2">
            <a class="px-3 py-1 border rounded text-sm @(Model.Page <= 1 ? "bg-gray-100 text-gray-400 cursor-not-allowed pointer-events-none" : "bg-white hover:bg-gray-50")" href="@(Model.Page <= 1 ? "#" : $"?page={Model.Page-1}&pageSize={Model.PageSize}&search={ViewBag.Search}&from={ViewBag.From:yyyy-MM-dd}&to={ViewBag.To:yyyy-MM-dd}")">Previous</a>
            <span class="px-3 py-1 border rounded text-sm bg-blue-600 text-white">@Model.Page</span>
            <a class="px-3 py-1 border rounded text-sm @((Model.Page * Model.PageSize) >= Model.Total ? "bg-gray-100 text-gray-400 cursor-not-allowed pointer-events-none" : "bg-white hover:bg-gray-50")" href="@((Model.Page * Model.PageSize) >= Model.Total ? "#" : $"?page={Model.Page+1}&pageSize={Model.PageSize}&search={ViewBag.Search}&from={ViewBag.From:yyyy-MM-dd}&to={ViewBag.To:yyyy-MM-dd}")">Next</a>
        </div>
    </div>
</div>
