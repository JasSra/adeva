@{
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<div class="bg-white rounded-lg shadow">
    <div class="p-6 border-b flex items-center justify-between">
        <h3 class="text-lg font-semibold">Communications</h3>
        <div class="flex gap-2">
            <select class="border rounded px-3 py-2 text-sm">
                <option value="">All Types</option>
                <option value="email">Email</option>
                <option value="sms">SMS</option>
                <option value="portal">Portal Message</option>
            </select>
        </div>
    </div>
    
    <div class="divide-y divide-gray-200">
        <!-- Email Communication -->
        <div class="p-6 hover:bg-gray-50 transition cursor-pointer">
            <div class="flex items-start">
                <div class="flex-shrink-0 bg-blue-100 rounded-full p-2">
                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </div>
                <div class="ml-4 flex-1">
                    <div class="flex items-center justify-between">
                        <h4 class="text-sm font-semibold text-gray-900">Payment Reminder - Debt #D-5001</h4>
                        <span class="text-xs text-gray-500">Dec 8, 2024</span>
                    </div>
                    <p class="text-sm text-gray-600 mt-1">Your payment of $500.00 is due on January 15, 2025. Please make your payment on time to avoid late fees.</p>
                    <div class="mt-2 flex items-center gap-2">
                        <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800">Email</span>
                        <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">Delivered</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- SMS Communication -->
        <div class="p-6 hover:bg-gray-50 transition cursor-pointer">
            <div class="flex items-start">
                <div class="flex-shrink-0 bg-green-100 rounded-full p-2">
                    <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                    </svg>
                </div>
                <div class="ml-4 flex-1">
                    <div class="flex items-center justify-between">
                        <h4 class="text-sm font-semibold text-gray-900">Payment Confirmation</h4>
                        <span class="text-xs text-gray-500">Dec 15, 2024</span>
                    </div>
                    <p class="text-sm text-gray-600 mt-1">Your payment of $500.00 has been received. Receipt #R-1234 has been generated.</p>
                    <div class="mt-2 flex items-center gap-2">
                        <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">SMS</span>
                        <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">Delivered</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Portal Message -->
        <div class="p-6 hover:bg-gray-50 transition cursor-pointer">
            <div class="flex items-start">
                <div class="flex-shrink-0 bg-purple-100 rounded-full p-2">
                    <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                </div>
                <div class="ml-4 flex-1">
                    <div class="flex items-center justify-between">
                        <h4 class="text-sm font-semibold text-gray-900">Welcome to Your User Portal</h4>
                        <span class="text-xs text-gray-500">Oct 1, 2024</span>
                    </div>
                    <p class="text-sm text-gray-600 mt-1">Welcome! You can now manage your debts, make payments, and view your account status online. If you have any questions, please contact our support team.</p>
                    <div class="mt-2 flex items-center gap-2">
                        <span class="px-2 py-1 text-xs rounded-full bg-purple-100 text-purple-800">Portal Message</span>
                        <span class="px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-800">Read</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="px-6 py-4 border-t bg-gray-50 flex items-center justify-between">
        <div class="text-sm text-gray-700">
            Showing <span class="font-medium">1</span> to <span class="font-medium">3</span> of <span class="font-medium">3</span> messages
        </div>
        <div class="flex gap-2">
            <button disabled class="px-3 py-1 border rounded text-sm bg-gray-100 text-gray-400 cursor-not-allowed">Previous</button>
            <button class="px-3 py-1 border rounded text-sm bg-blue-600 text-white">1</button>
            <button disabled class="px-3 py-1 border rounded text-sm bg-gray-100 text-gray-400 cursor-not-allowed">Next</button>
        </div>
    </div>
</div>
