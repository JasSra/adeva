@{
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
    var debtId = ViewBag.DebtId;
}

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
        <!-- Debt Information -->
        <div class="bg-white rounded-lg shadow">
            <div class="p-6 border-b">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold">Debt Details - #D-@debtId</h3>
                    <span class="px-3 py-1 text-sm rounded-full bg-green-100 text-green-800">Active</span>
                </div>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-2 gap-6">
                    <div>
                        <p class="text-sm font-medium text-gray-500">Original Amount</p>
                        <p class="text-xl font-semibold text-gray-900">$5,000.00</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Outstanding Balance</p>
                        <p class="text-xl font-semibold text-red-600">$3,250.00</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Paid to Date</p>
                        <p class="text-xl font-semibold text-green-600">$1,750.00</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Due Date</p>
                        <p class="text-xl font-semibold text-gray-900">Jan 15, 2025</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Interest Rate</p>
                        <p class="text-lg font-semibold text-gray-900">5.0% p.a.</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Accrued Interest</p>
                        <p class="text-lg font-semibold text-gray-900">$125.00</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment History -->
        <div class="bg-white rounded-lg shadow">
            <div class="p-6 border-b">
                <h3 class="text-lg font-semibold">Payment History</h3>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 border-b">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Method</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Receipt</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">2024-12-15</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">$500.00</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Credit Card</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <a href="/User/Receipts/1234" class="text-blue-600 hover:underline">View</a>
                            </td>
                        </tr>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">2024-11-15</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">$750.00</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Bank Transfer</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <a href="/User/Receipts/1233" class="text-blue-600 hover:underline">View</a>
                            </td>
                        </tr>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">2024-10-15</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">$500.00</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Credit Card</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <a href="/User/Receipts/1232" class="text-blue-600 hover:underline">View</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Audit Trail -->
        <div class="bg-white rounded-lg shadow">
            <div class="p-6 border-b">
                <h3 class="text-lg font-semibold">Activity Log</h3>
            </div>
            <div class="p-6">
                <div class="space-y-4">
                    <div class="flex items-start">
                        <div class="flex-shrink-0 bg-green-100 rounded-full p-2">
                            <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                        </div>
                        <div class="ml-3 flex-1">
                            <p class="text-sm font-medium">Payment Received</p>
                            <p class="text-sm text-gray-500">Payment of $500.00 processed successfully</p>
                            <p class="text-xs text-gray-400 mt-1">Dec 15, 2024 at 2:30 PM</p>
                        </div>
                    </div>
                    <div class="flex items-start">
                        <div class="flex-shrink-0 bg-blue-100 rounded-full p-2">
                            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div class="ml-3 flex-1">
                            <p class="text-sm font-medium">Payment Reminder Sent</p>
                            <p class="text-sm text-gray-500">Email reminder sent for upcoming payment</p>
                            <p class="text-xs text-gray-400 mt-1">Dec 8, 2024 at 9:00 AM</p>
                        </div>
                    </div>
                    <div class="flex items-start">
                        <div class="flex-shrink-0 bg-purple-100 rounded-full p-2">
                            <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div class="ml-3 flex-1">
                            <p class="text-sm font-medium">Payment Plan Updated</p>
                            <p class="text-sm text-gray-500">Monthly payment plan activated</p>
                            <p class="text-xs text-gray-400 mt-1">Oct 1, 2024 at 10:15 AM</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar Actions -->
    <div class="space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow">
            <div class="p-6 border-b">
                <h3 class="text-lg font-semibold">Actions</h3>
            </div>
            <div class="p-6 space-y-3">
                <a href="/User/Payments/MakePayment/@debtId" class="block w-full px-4 py-2 bg-green-600 text-white text-center rounded hover:bg-green-700 transition">
                    Make a Payment
                </a>
                <a href="/User/Payments/ViewPlan/@debtId" class="block w-full px-4 py-2 bg-blue-600 text-white text-center rounded hover:bg-blue-700 transition">
                    View Payment Plan
                </a>
                <a href="/User/Payments/ChangePlan/@debtId" class="block w-full px-4 py-2 bg-purple-600 text-white text-center rounded hover:bg-purple-700 transition">
                    Change Payment Plan
                </a>
                <a href="/User/Debts/RequestExtension/@debtId" class="block w-full px-4 py-2 border border-gray-300 text-gray-700 text-center rounded hover:bg-gray-50 transition">
                    Request Extension
                </a>
                <a href="/User/Debts/Dispute/@debtId" class="block w-full px-4 py-2 border border-red-300 text-red-700 text-center rounded hover:bg-red-50 transition">
                    Dispute Debt
                </a>
            </div>
        </div>

        <!-- Payment Plan Summary -->
        <div class="bg-white rounded-lg shadow">
            <div class="p-6 border-b">
                <h3 class="text-lg font-semibold">Current Payment Plan</h3>
            </div>
            <div class="p-6">
                <div class="space-y-3">
                    <div>
                        <p class="text-sm font-medium text-gray-500">Plan Type</p>
                        <p class="text-base font-semibold text-gray-900">Monthly Installments</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Installment Amount</p>
                        <p class="text-base font-semibold text-gray-900">$500.00</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Remaining Payments</p>
                        <p class="text-base font-semibold text-gray-900">7 of 10</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Next Payment Due</p>
                        <p class="text-base font-semibold text-gray-900">Jan 15, 2025</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div class="ml-3">
                    <h4 class="text-sm font-medium text-blue-800">Need Help?</h4>
                    <p class="mt-1 text-sm text-blue-700">
                        Contact us at support@example.com or call 1-800-DEBT-HELP
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
