@using DebtManager.Web.Services
@{
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
    var debtId = ViewBag.DebtId;
    var theme = Context.Items[BrandingResolverMiddleware.ThemeItemKey] as BrandingTheme;
}

<div class="space-y-6">
    @await Html.PartialAsync("~/Views/Shared/Partials/_TenantIdentity.cshtml", theme)

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2 space-y-6">
            <div class="app-surface">
                <div class="app-surface-header flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
                    <div>
                        <h3 class="text-lg font-semibold">Debt Details - #D-@debtId</h3>
                        <p class="text-sm text-slate-500 dark:text-slate-300">Keep track of outstanding balances, payments, and activity.</p>
                    </div>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold"
                          style="background:linear-gradient(135deg,var(--tenant-primary,#2563eb),var(--tenant-secondary,#1d4ed8));color:#fff;">
                        Active
                    </span>
                </div>
                <div class="app-surface-body">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                        <div>
                            <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-slate-300">Original amount</p>
                            <p class="text-xl font-semibold text-slate-900 dark:text-slate-100">$5,000.00</p>
                        </div>
                        <div>
                            <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-slate-300">Outstanding balance</p>
                            <p class="text-xl font-semibold text-red-500">$3,250.00</p>
                        </div>
                        <div>
                            <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-slate-300">Paid to date</p>
                            <p class="text-xl font-semibold text-emerald-500">$1,750.00</p>
                        </div>
                        <div>
                            <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-slate-300">Next due date</p>
                            <p class="text-xl font-semibold text-slate-900 dark:text-slate-100">Jan 15, 2025</p>
                        </div>
                        <div>
                            <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-slate-300">Interest rate</p>
                            <p class="text-lg font-semibold text-slate-900 dark:text-slate-100">5.0% p.a.</p>
                        </div>
                        <div>
                            <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-slate-300">Accrued interest</p>
                            <p class="text-lg font-semibold text-slate-900 dark:text-slate-100">$125.00</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="app-surface">
                <div class="app-surface-header">
                    <h3 class="text-lg font-semibold">Payment History</h3>
                </div>
                <div class="overflow-x-auto">
                    <table class="app-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Method</th>
                                <th>Receipt</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-slate-500 dark:text-slate-300">2024-12-15</td>
                                <td class="font-medium text-slate-900 dark:text-slate-100">$500.00</td>
                                <td class="text-slate-500 dark:text-slate-300">Credit Card</td>
                                <td><a href="/User/Receipts/1234" class="app-link text-sm">View</a></td>
                            </tr>
                            <tr>
                                <td class="text-slate-500 dark:text-slate-300">2024-11-15</td>
                                <td class="font-medium text-slate-900 dark:text-slate-100">$750.00</td>
                                <td class="text-slate-500 dark:text-slate-300">Bank Transfer</td>
                                <td><a href="/User/Receipts/1233" class="app-link text-sm">View</a></td>
                            </tr>
                            <tr>
                                <td class="text-slate-500 dark:text-slate-300">2024-10-15</td>
                                <td class="font-medium text-slate-900 dark:text-slate-100">$500.00</td>
                                <td class="text-slate-500 dark:text-slate-300">Credit Card</td>
                                <td><a href="/User/Receipts/1232" class="app-link text-sm">View</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="app-surface">
                <div class="app-surface-header">
                    <h3 class="text-lg font-semibold">Activity Log</h3>
                </div>
                <div class="app-surface-body space-y-4">
                    <div class="flex items-start gap-3">
                        <div class="flex-shrink-0 bg-emerald-100 text-emerald-700 rounded-full p-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-slate-900 dark:text-slate-100">Payment received</p>
                            <p class="text-sm text-slate-500 dark:text-slate-300">Payment of $500.00 processed successfully</p>
                            <p class="text-xs text-slate-400 dark:text-slate-500 mt-1">Dec 15, 2024 at 2:30 PM</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-3">
                        <div class="flex-shrink-0 bg-blue-100 text-blue-600 rounded-full p-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-slate-900 dark:text-slate-100">Payment reminder sent</p>
                            <p class="text-sm text-slate-500 dark:text-slate-300">Email reminder issued ahead of the next installment</p>
                            <p class="text-xs text-slate-400 dark:text-slate-500 mt-1">Dec 8, 2024 at 9:00 AM</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-3">
                        <div class="flex-shrink-0 bg-purple-100 text-purple-600 rounded-full p-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-slate-900 dark:text-slate-100">Payment plan updated</p>
                            <p class="text-sm text-slate-500 dark:text-slate-300">Monthly installment plan activated</p>
                            <p class="text-xs text-slate-400 dark:text-slate-500 mt-1">Oct 1, 2024 at 10:15 AM</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="space-y-6">
            <div class="app-surface">
                <div class="app-surface-header">
                    <h3 class="text-lg font-semibold">Actions</h3>
                </div>
                <div class="app-surface-body space-y-3">
                    <a href="/User/Payments/MakePayment/@debtId" class="btn w-full justify-center">Make a Payment</a>
                    <a href="/User/Payments/ViewPlan/@debtId" class="btn-outline w-full justify-center">View Payment Plan</a>
                    <a href="/User/Payments/ChangePlan/@debtId" class="btn-outline w-full justify-center">Change Payment Plan</a>
                    <a href="/User/Debts/RequestExtension/@debtId" class="btn-outline w-full justify-center">Request Extension</a>
                    <a href="/User/Debts/Dispute/@debtId" class="btn-danger-outline w-full justify-center">Dispute Debt</a>
                </div>
            </div>

            <div class="app-sidebar-card space-y-3">
                <h4 class="text-sm font-semibold">Need Help?</h4>
                <p class="text-sm">
                    Email <a href="mailto:@(theme?.SupportEmail ?? "support@adevaplus.com")" class="app-link">@(
                        theme?.SupportEmail ?? "support@adevaplus.com")</a><br />
                    Call <a href="tel:@(theme?.SupportPhone ?? "1300 ADEVA PLUS")" class="app-link">@(
                        theme?.SupportPhone ?? "1300 ADEVA PLUS")</a>
                </p>
                <p class="text-xs text-slate-600 dark:text-slate-200">Our support specialists can help update plans, pause payments, or clarify balances.</p>
            </div>
        </div>
    </div>
</div>
