@{
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
    var debtId = ViewBag.DebtId;
}

<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow">
        <div class="p-6 border-b">
            <h3 class="text-lg font-semibold">Request Payment Extension - #D-@debtId</h3>
            <p class="text-sm text-gray-500 mt-1">Request additional time to make your payment</p>
        </div>
        
        <div class="p-6">
            <div class="mb-6 bg-blue-50 border-l-4 border-blue-400 p-4 rounded">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-blue-700">
                            Extension requests are reviewed on a case-by-case basis. Approval is not guaranteed and depends on your payment history and circumstances.
                        </p>
                    </div>
                </div>
            </div>
            
            <form class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Current Due Date</label>
                    <input type="text" value="January 15, 2025" class="w-full border border-gray-300 rounded-lg px-4 py-2 bg-gray-50" disabled />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Requested New Due Date *</label>
                    <input type="date" min="@DateTime.Now.AddDays(7).ToString("yyyy-MM-dd")" class="w-full border border-gray-300 rounded-lg px-4 py-2" required />
                    <p class="text-xs text-gray-500 mt-1">Must be at least 7 days from today</p>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Reason for Extension Request *</label>
                    <select class="w-full border border-gray-300 rounded-lg px-4 py-2" required>
                        <option value="">Select a reason...</option>
                        <option value="financial_hardship">Financial hardship</option>
                        <option value="medical">Medical emergency</option>
                        <option value="job_loss">Job loss or reduced income</option>
                        <option value="family_emergency">Family emergency</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Detailed Explanation *</label>
                    <textarea rows="5" class="w-full border border-gray-300 rounded-lg px-4 py-2" placeholder="Please explain your circumstances and why you need an extension..." required></textarea>
                    <p class="text-xs text-gray-500 mt-1">Minimum 30 characters</p>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Will you be able to pay in full on the new date?</label>
                    <div class="space-y-2">
                        <label class="flex items-center">
                            <input type="radio" name="paymentAbility" value="full" class="mr-2" checked />
                            <span class="text-sm">Yes, I can pay the full amount on the new date</span>
                        </label>
                        <label class="flex items-center">
                            <input type="radio" name="paymentAbility" value="partial" class="mr-2" />
                            <span class="text-sm">No, I may need a payment plan</span>
                        </label>
                    </div>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Supporting Documentation (Optional)</label>
                    <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center">
                        <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        <div class="mt-2">
                            <button type="button" class="text-blue-600 hover:underline">Upload files</button>
                            <p class="text-xs text-gray-500 mt-1">PDF, JPG, PNG up to 10MB</p>
                        </div>
                    </div>
                </div>
                
                <div class="flex gap-3">
                    <button type="submit" class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium">
                        Submit Extension Request
                    </button>
                    <a href="/User/Debts/Details/@debtId" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition font-medium">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
