@{
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<div class="max-w-2xl mx-auto px-4 sm:px-6 py-8">
    <!-- Success Animation -->
    <div class="text-center mb-6">
        <div class="inline-flex items-center justify-center w-24 h-24 bg-green-100 rounded-full animate-bounce-once mb-4">
            <svg class="w-16 h-16 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <!-- Success Header -->
        <div class="bg-gradient-to-r from-green-500 to-green-600 text-white py-6 px-6 text-center">
            <h2 class="text-2xl font-bold mb-2">ðŸŽ‰ Payment Successful!</h2>
            <p class="text-green-100">Your payment has been received and is being processed.</p>
        </div>
        
        <div class="p-6">
            <!-- Payment Details -->
            <div id="payment-details" class="bg-gradient-to-br from-gray-50 to-blue-50 rounded-lg p-6 mb-6">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="font-bold text-gray-900 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        Payment Details
                    </h3>
                    <button 
                        id="download-receipt-btn"
                        class="text-sm px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium flex items-center shadow-sm">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        Download Receipt
                    </button>
                </div>
                <div class="space-y-3 text-sm">
                    <div class="flex justify-between items-center bg-white bg-opacity-60 rounded p-3">
                        <span class="text-gray-600 flex items-center">
                            <svg class="w-4 h-4 mr-1 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                            </svg>
                            Transaction ID
                        </span>
                        <span class="font-mono text-gray-900 font-medium" id="payment-id">Loading...</span>
                    </div>
                    <div class="flex justify-between items-center bg-white bg-opacity-60 rounded p-3">
                        <span class="text-gray-600 flex items-center">
                            <svg class="w-4 h-4 mr-1 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            Amount
                        </span>
                        <span class="font-bold text-green-600 text-lg" id="payment-amount">-</span>
                    </div>
                    <div class="flex justify-between items-center bg-white bg-opacity-60 rounded p-3">
                        <span class="text-gray-600 flex items-center">
                            <svg class="w-4 h-4 mr-1 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            Status
                        </span>
                        <span class="inline-flex items-center px-3 py-1 bg-green-100 text-green-800 text-xs font-bold rounded-full">
                            <span class="w-2 h-2 bg-green-600 rounded-full mr-1"></span>
                            Completed
                        </span>
                    </div>
                    <div class="flex justify-between items-center bg-white bg-opacity-60 rounded p-3">
                        <span class="text-gray-600 flex items-center">
                            <svg class="w-4 h-4 mr-1 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            Date & Time
                        </span>
                        <span class="text-gray-900 font-medium" id="payment-date">-</span>
                    </div>
                </div>
            </div>
            
            <!-- Info Message -->
            <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-6 rounded">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-blue-700">
                            <strong>What's next?</strong> A confirmation email with your receipt has been sent to your registered email address.
                            You can also view this transaction in your payment history.
                        </p>
                    </div>
                </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-3">
                <a href="/User" class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 active:bg-blue-800 transition font-semibold text-center shadow-md flex items-center justify-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                    Go to Dashboard
                </a>
                <a href="/User/Payments" class="flex-1 px-6 py-3 border-2 border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 active:bg-gray-100 transition font-semibold text-center flex items-center justify-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                    View Payment History
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    @@keyframes bounce-once {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
    }
    .animate-bounce-once {
        animation: bounce-once 0.6s ease-in-out;
    }
</style>

<script>
    // Parse payment intent from URL
    const urlParams = new URLSearchParams(window.location.search);
    const paymentIntentId = urlParams.get('payment_intent');
    const paymentIntentClientSecret = urlParams.get('payment_intent_client_secret');
    
    if (paymentIntentId) {
        // Display basic info immediately
        document.getElementById('payment-id').textContent = paymentIntentId.substring(0, 24) + '...';
        document.getElementById('payment-date').textContent = new Date().toLocaleString();
        
        // Retrieve payment status from Stripe
        fetch(`/api/payment/status/${paymentIntentId}`)
            .then(response => response.json())
            .then(data => {
                document.getElementById('payment-id').textContent = paymentIntentId;
                // Additional details would be populated from the API response
            })
            .catch(error => {
                console.error('Error retrieving payment status:', error);
            });
    }
    
    // Download receipt handler
    document.getElementById('download-receipt-btn')?.addEventListener('click', async function() {
        if (!paymentIntentId) {
            alert('Payment information not available');
            return;
        }
        
