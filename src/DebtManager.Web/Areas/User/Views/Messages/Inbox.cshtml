@model IEnumerable<DebtManager.Web.Areas.User.Controllers.UserInboxItemVm>
@{
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
    ViewBag.Title = "Inbox";
}

<div class="max-w-4xl mx-auto">
    <h2 class="text-2xl font-bold mb-4">Inbox</h2>
    <div class="bg-white dark:bg-gray-800 rounded border border-gray-200 dark:border-gray-700 divide-y">
        @foreach (var m in Model)
        {
            <a class="block p-4 hover:bg-gray-50 dark:hover:bg-gray-700" href="@Url.Action("View", new { id = m.Id })">
                <div class="flex items-center justify-between">
                    <div>
                        <div class="font-semibold">@m.Title</div>
                        <div class="text-sm text-gray-600 dark:text-gray-400">@m.Preview</div>
                    </div>
                    <div class="text-xs text-gray-500">@m.SentAtUtc</div>
                </div>
            </a>
        }
    </div>
</div>
