@{
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Personal Information -->
    <div class="bg-white rounded-lg shadow">
        <div class="p-6 border-b">
            <h3 class="text-lg font-semibold">Personal Information</h3>
        </div>
        <div class="p-6">
            <form class="space-y-4">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
                        <input type="text" value="John" class="w-full border border-gray-300 rounded px-3 py-2" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
                        <input type="text" value="Doe" class="w-full border border-gray-300 rounded px-3 py-2" />
                    </div>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Preferred Name</label>
                    <input type="text" value="John" class="w-full border border-gray-300 rounded px-3 py-2" />
                </div>
                
                <div class="flex gap-3 pt-4">
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                        Update Information
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Contact Methods -->
    <div class="bg-white rounded-lg shadow">
        <div class="p-6 border-b">
            <h3 class="text-lg font-semibold">Contact Methods</h3>
        </div>
        <div class="p-6">
            <form class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Primary Email</label>
                    <input type="email" value="john.doe@example.com" class="w-full border border-gray-300 rounded px-3 py-2" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Primary Phone</label>
                    <input type="tel" value="+1 (555) 123-4567" class="w-full border border-gray-300 rounded px-3 py-2" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Alternate Phone</label>
                    <input type="tel" value="+1 (555) 987-6543" class="w-full border border-gray-300 rounded px-3 py-2" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Preferred Contact Method</label>
                    <select class="w-full border border-gray-300 rounded px-3 py-2">
                        <option value="email">Email</option>
                        <option value="sms">SMS</option>
                        <option value="phone">Phone Call</option>
                        <option value="portal">Portal Message</option>
                    </select>
                </div>
                
                <div class="flex gap-3 pt-4">
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                        Update Contact Methods
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Address Information -->
    <div class="bg-white rounded-lg shadow lg:col-span-2">
        <div class="p-6 border-b">
            <h3 class="text-lg font-semibold">Address Information</h3>
        </div>
        <div class="p-6">
            <form class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Address Line 1</label>
                    <input type="text" value="123 Main Street" class="w-full border border-gray-300 rounded px-3 py-2" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Address Line 2</label>
                    <input type="text" value="Apt 4B" class="w-full border border-gray-300 rounded px-3 py-2" />
                </div>
                
                <div class="grid grid-cols-3 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">City</label>
                        <input type="text" value="Sydney" class="w-full border border-gray-300 rounded px-3 py-2" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">State</label>
                        <input type="text" value="NSW" class="w-full border border-gray-300 rounded px-3 py-2" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Postal Code</label>
                        <input type="text" value="2000" class="w-full border border-gray-300 rounded px-3 py-2" />
                    </div>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Country</label>
                    <select class="w-full border border-gray-300 rounded px-3 py-2">
                        <option value="AU" selected>Australia</option>
                        <option value="NZ">New Zealand</option>
                        <option value="US">United States</option>
                        <option value="UK">United Kingdom</option>
                    </select>
                </div>
                
                <div class="flex gap-3 pt-4">
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                        Update Address
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-6 bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded">
    <div class="flex">
        <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
        </div>
        <div class="ml-3">
            <p class="text-sm text-yellow-700">
                <strong>Important:</strong> Keeping your contact details up to date ensures you receive important notifications about your debts and payments.
            </p>
        </div>
    </div>
</div>
